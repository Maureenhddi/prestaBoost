# Copy this file to .env.local and customize for your local development

###> symfony/framework-bundle ###
APP_ENV=dev
APP_SECRET=your_random_secret_here_change_me
###< symfony/framework-bundle ###

###> doctrine/doctrine-bundle ###
# For local development with Docker
DATABASE_URL="postgresql://prestaboost:prestaboost_password@postgres:5432/prestaboost_db?serverVersion=15&charset=utf8"

# For local development without Docker (local PostgreSQL)
# DATABASE_URL="postgresql://username:password@localhost:5432/prestaboost_db?serverVersion=15&charset=utf8"
###< doctrine/doctrine-bundle ###

###> lexik/jwt-authentication-bundle ###
JWT_SECRET_KEY=%kernel.project_dir%/config/jwt/private.pem
JWT_PUBLIC_KEY=%kernel.project_dir%/config/jwt/public.pem
JWT_PASSPHRASE=change_me
###< lexik/jwt-authentication-bundle ###

###> nelmio/cors-bundle ###
# Allow requests from localhost and your frontend dev server
CORS_ALLOW_ORIGIN='^https?://(localhost|127\.0\.0\.1)(:[0-9]+)?$'
# For Angular dev server on port 4200:
# CORS_ALLOW_ORIGIN='^https?://(localhost|127\.0\.0\.1)(:[0-9]+)?$'
###< nelmio/cors-bundle ###
