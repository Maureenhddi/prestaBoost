{% extends 'base.html.twig' %}

{% block title %}Commande #{{ order.reference ?: order.orderId }} - {{ boutique.name }}{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="/css/dashboard.css?v={{ 'now'|date('YmdHis') }}">
    <style>
        {% if boutique.primaryColor %}
        :root {
            --primary: {{ boutique.primaryColor }};
        }
        body {
            background: linear-gradient(135deg, {{ boutique.primaryColor }} 0%, {{ boutique.primaryColor }}dd 100%);
        }
        body::before {
            background:
                radial-gradient(circle at 20% 50%, {{ boutique.primaryColor }}26 0%, transparent 50%),
                radial-gradient(circle at 80% 80%, {{ boutique.primaryColor }}26 0%, transparent 50%),
                radial-gradient(circle at 40% 20%, {{ boutique.primaryColor }}26 0%, transparent 50%);
        }
        {% endif %}

        .detail-card {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(20px);
            border-radius: 20px;
            padding: 30px;
            margin-bottom: 24px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
        }

        .detail-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 24px;
            padding-bottom: 24px;
            border-bottom: 2px solid var(--gray-200);
        }

        .detail-title {
            font-size: 24px;
            font-weight: 700;
            color: var(--gray-900);
        }

        .status-badge {
            display: inline-block;
            padding: 8px 16px;
            border-radius: 10px;
            font-size: 13px;
            font-weight: 700;
            text-transform: uppercase;
        }

        .status-pending { background: #fef3c7; color: #92400e; }
        .status-processing { background: #dbeafe; color: #1e40af; }
        .status-completed { background: #d1fae5; color: #065f46; }
        .status-cancelled { background: #fee2e2; color: #991b1b; }

        .detail-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 24px;
            margin-bottom: 24px;
        }

        .detail-item {
            padding: 16px;
            background: var(--gray-50);
            border-radius: 12px;
        }

        .detail-item-label {
            font-size: 12px;
            font-weight: 600;
            text-transform: uppercase;
            color: var(--gray-600);
            margin-bottom: 8px;
            letter-spacing: 0.5px;
        }

        .detail-item-value {
            font-size: 16px;
            font-weight: 700;
            color: var(--gray-900);
        }

        .total-amount {
            font-size: 32px;
            font-weight: 700;
            color: var(--primary);
        }

        .btn-back {
            display: inline-flex;
            align-items: center;
            gap: 8px;
            padding: 10px 20px;
            background: var(--gray-200);
            color: var(--gray-700);
            border-radius: 12px;
            text-decoration: none;
            font-weight: 600;
            font-size: 14px;
            transition: all 0.2s ease;
        }

        .btn-back:hover {
            background: var(--gray-300);
            transform: translateY(-2px);
        }

        .back-button-wrapper {
            margin-bottom: 24px;
        }

        .navbar-brand img {
            max-height: 40px;
        }

        .info-section {
            margin-top: 16px;
        }

        .info-section-title {
            font-size: 12px;
            font-weight: 700;
            text-transform: uppercase;
            color: var(--gray-600);
            margin-bottom: 8px;
            letter-spacing: 0.5px;
        }

        .info-box {
            background: var(--gray-50);
            border-radius: 10px;
            padding: 12px;
        }

        .info-row {
            display: flex;
            justify-content: space-between;
            align-items: flex-start;
            gap: 12px;
            margin-bottom: 6px;
        }

        .info-row:last-child {
            margin-bottom: 0;
        }

        .info-label {
            font-size: 12px;
            color: var(--gray-600);
            flex-shrink: 0;
        }

        .info-value {
            font-size: 12px;
            font-weight: 600;
            color: var(--gray-900);
            text-align: right;
        }

        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 16px;
        }

        .stat-card {
            padding: 20px;
            border-radius: 16px;
            text-align: center;
        }

        .stat-card.total {
            background: linear-gradient(135deg, var(--gray-50), white);
        }

        .stat-card.margin {
            background: linear-gradient(135deg, #d1fae5, #a7f3d0);
        }

        .stat-card.profit {
            background: linear-gradient(135deg, #e0e7ff, #c7d2fe);
        }

        .stat-card.cost {
            background: linear-gradient(135deg, #fee2e2, #fecaca);
        }

        .stat-label {
            font-size: 13px;
            font-weight: 600;
            margin-bottom: 6px;
        }

        .stat-label.total { color: var(--gray-600); }
        .stat-label.margin { color: #065f46; }
        .stat-label.profit { color: #3730a3; }
        .stat-label.cost { color: #991b1b; }

        .stat-value {
            font-size: 32px;
            font-weight: 700;
        }

        .stat-value.total { color: var(--primary); }
        .stat-value.margin { color: #065f46; }
        .stat-value.profit { color: #3730a3; }
        .stat-value.cost { color: #991b1b; }

        .products-table {
            width: 100%;
            border-collapse: collapse;
        }

        .products-table thead {
            background: var(--gray-50);
            border-bottom: 2px solid var(--gray-200);
        }

        .products-table th {
            padding: 12px 16px;
            font-size: 12px;
            font-weight: 700;
            text-transform: uppercase;
            color: var(--gray-600);
        }

        .products-table th.text-left { text-align: left; }
        .products-table th.text-center { text-align: center; }
        .products-table th.text-right { text-align: right; }

        .products-table tbody tr {
            border-bottom: 1px solid var(--gray-200);
        }

        .products-table td {
            padding: 16px;
        }

        .product-name {
            font-weight: 600;
            color: var(--gray-900);
            margin-bottom: 4px;
        }

        .product-ref {
            font-size: 12px;
            color: var(--gray-500);
        }

        .quantity-badge {
            display: inline-block;
            padding: 4px 12px;
            background: var(--gray-100);
            border-radius: 8px;
            font-weight: 600;
        }

        .margin-badge-item {
            display: inline-block;
            padding: 4px 10px;
            border-radius: 8px;
            font-weight: 700;
        }

        .margin-badge-item.excellent { background: #065f4620; color: #065f46; }
        .margin-badge-item.good { background: #1e40af20; color: #1e40af; }
        .margin-badge-item.fair { background: #92400e20; color: #92400e; }
        .margin-badge-item.low { background: #991b1b20; color: #991b1b; }

        .text-right { text-align: right; }
        .text-center { text-align: center; }

        .products-table tfoot {
            background: linear-gradient(135deg, var(--gray-50), white);
            border-top: 2px solid var(--gray-200);
        }

        .products-table tfoot td {
            padding: 16px;
        }

        .footer-label {
            font-weight: 700;
            font-size: 16px;
            color: var(--gray-900);
        }

        .footer-total {
            font-weight: 700;
            font-size: 20px;
            color: var(--primary);
        }

        .customer-info-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 16px;
            margin-top: 20px;
        }

        .warning-box {
            background: #fef3c7;
            border: 1px solid #fbbf24;
            padding: 10px;
        }

        .warning-text {
            color: #92400e;
            font-size: 12px;
        }

        .no-data {
            color: var(--gray-400);
            font-size: 12px;
        }

        .header-subtitle {
            font-size: 14px;
            color: var(--gray-600);
            margin-top: 4px;
        }

        .unit-price {
            font-weight: 600;
            color: var(--gray-700);
        }

        .item-total {
            font-weight: 700;
            color: var(--primary);
            font-size: 16px;
        }

        .empty-warning {
            background: linear-gradient(135deg, #fef3c7, #fde68a);
            border: 2px solid #fbbf24;
        }

        .empty-content {
            display: flex;
            align-items: center;
            gap: 16px;
        }

        .empty-icon {
            font-size: 32px;
        }

        .empty-title {
            font-size: 16px;
            font-weight: 700;
            color: #92400e;
            margin-bottom: 4px;
        }

        .empty-description {
            font-size: 14px;
            color: #92400e;
            margin: 0;
        }

        .table-wrapper {
            overflow-x: auto;
            overflow-y: visible;
            -webkit-overflow-scrolling: touch;
            width: 100%;
            max-width: 100%;
            position: relative;
        }

        /* Scroll indicators */
        .table-wrapper::before,
        .table-wrapper::after {
            content: '';
            position: absolute;
            top: 0;
            bottom: 20px;
            width: 40px;
            pointer-events: none;
            z-index: 5;
            opacity: 0;
            transition: opacity 0.3s ease;
        }

        .table-wrapper::before {
            left: 0;
            background: linear-gradient(to right, rgba(0, 0, 0, 0.1), transparent);
        }

        .table-wrapper::after {
            right: 0;
            background: linear-gradient(to left, rgba(0, 0, 0, 0.1), transparent);
        }

        .table-wrapper.scrolled-left::before {
            opacity: 1;
        }

        .table-wrapper.scrolled-right::after {
            opacity: 1;
        }

        .table-wrapper::-webkit-scrollbar {
            height: 12px;
        }

        .table-wrapper::-webkit-scrollbar-track {
            background: var(--gray-100);
            border-radius: 6px;
        }

        .table-wrapper::-webkit-scrollbar-thumb {
            background: var(--primary);
            border-radius: 6px;
            border: 2px solid var(--gray-100);
        }

        .table-wrapper::-webkit-scrollbar-thumb:hover {
            background: var(--primary);
            opacity: 0.8;
        }

        .products-table {
            min-width: 700px;
        }

        /* Zebra striping */
        .products-table tbody tr:nth-child(even) {
            background: rgba(249, 250, 251, 0.5);
        }
    </style>
{% endblock %}

{% block navbar %}
<div class="container">
    <nav class="navbar">
        <div class="navbar-brand">
            {% if boutique.logoUrl %}
                <img src="{{ boutique.logoUrl }}" alt="{{ boutique.name }}">
            {% else %}
                {{ boutique.name }}
            {% endif %}
        </div>
        <ul class="navbar-menu">
            <li><a href="{{ path('app_dashboard') }}">← Mes Boutiques</a></li>
            <li><a href="{{ path('app_boutique_dashboard', {id: boutique.id}) }}">Dashboard</a></li>
            <li><a href="{{ path('app_boutique_stocks', {id: boutique.id}) }}">Stocks</a></li>
            <li><a href="{{ path('app_boutique_orders', {id: boutique.id}) }}" class="active">Commandes</a></li>
            <li><a href="{{ path('app_boutique_settings', {id: boutique.id}) }}">Paramètres</a></li>
            {% if app.user.isSuperAdmin() %}
                <li><a href="{{ path('app_users') }}">Utilisateurs</a></li>
            {% endif %}
            <li><a href="{{ path('app_logout') }}">Déconnexion</a></li>
        </ul>
    </nav>
</div>
{% endblock %}

{% block body %}

<div class="back-button-wrapper">
    <a href="{{ path('app_boutique_orders', {id: boutique.id}) }}" class="btn-back">
        <svg width="18" height="18" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
        </svg>
        Retour aux commandes
    </a>
</div>

<div class="detail-card">
    <div class="detail-header">
        <div>
            <div class="detail-title">Commande #{{ order.reference ?: order.orderId }}</div>
            <div class="header-subtitle">
                {{ order.orderDate|date('d/m/Y à H:i') }}
            </div>
        </div>
        {% set statusClass = 'pending' %}
        {% set statusText = 'En attente' %}
        {% if order.currentState == '2' %}
            {% set statusClass = 'processing' %}
            {% set statusText = 'Paiement OK' %}
        {% elseif order.currentState == '3' %}
            {% set statusClass = 'processing' %}
            {% set statusText = 'Préparation' %}
        {% elseif order.currentState == '4' %}
            {% set statusClass = 'processing' %}
            {% set statusText = 'Expédié' %}
        {% elseif order.currentState == '5' %}
            {% set statusClass = 'completed' %}
            {% set statusText = 'Livré' %}
        {% elseif order.currentState == '6' %}
            {% set statusClass = 'cancelled' %}
            {% set statusText = 'Annulé' %}
        {% endif %}
        <span class="status-badge status-{{ statusClass }}">{{ statusText }}</span>
    </div>

    <div class="detail-grid">
        <div class="detail-item">
            <div class="detail-item-label">ID Commande</div>
            <div class="detail-item-value">{{ order.orderId }}</div>
        </div>
        <div class="detail-item">
            <div class="detail-item-label">Référence</div>
            <div class="detail-item-value">{{ order.reference ?: 'N/A' }}</div>
        </div>
        <div class="detail-item">
            <div class="detail-item-label">Date de commande</div>
            <div class="detail-item-value">{{ order.orderDate|date('d/m/Y H:i') }}</div>
        </div>
        <div class="detail-item">
            <div class="detail-item-label">Mode de paiement</div>
            <div class="detail-item-value">{{ order.payment ?: 'Non spécifié' }}</div>
        </div>
    </div>

    <div class="stats-grid">
        <div class="stat-card total">
            <div class="stat-label total">MONTANT TOTAL</div>
            <div class="stat-value total">{{ order.totalPaid|number_format(2, ',', ' ') }} €</div>
        </div>

        {% if order.hasMarginData %}
        <div class="stat-card margin">
            <div class="stat-label margin">MARGE</div>
            <div class="stat-value margin">{{ order.marginPercent }}%</div>
        </div>

        <div class="stat-card profit">
            <div class="stat-label profit">BÉNÉFICE</div>
            <div class="stat-value profit">{{ order.totalProfit|number_format(2, ',', ' ') }} €</div>
        </div>

        <div class="stat-card cost">
            <div class="stat-label cost">COÛT</div>
            <div class="stat-value cost">{{ order.totalCost|number_format(2, ',', ' ') }} €</div>
        </div>
        {% endif %}
    </div>

    <div class="customer-info-grid">
        <div>
            <div class="info-section-title">Informations client</div>
            {% if order.customerName or order.customerEmail or order.customerPhone %}
                <div class="info-box">
                    {% if order.customerName %}
                        <div class="info-row">
                            <span class="info-label">Nom :</span>
                            <span class="info-value">{{ order.customerName }}</span>
                        </div>
                    {% endif %}
                    {% if order.customerEmail %}
                        <div class="info-row">
                            <span class="info-label">Email :</span>
                            <span class="info-value">{{ order.customerEmail }}</span>
                        </div>
                    {% endif %}
                    {% if order.customerPhone %}
                        <div class="info-row">
                            <span class="info-label">Téléphone :</span>
                            <span class="info-value">{{ order.customerPhone }}</span>
                        </div>
                    {% endif %}
                </div>
            {% else %}
                <div class="warning-box">
                    <div class="warning-text">
                        Informations client non disponibles.
                    </div>
                </div>
            {% endif %}
        </div>

        <div>
            {% if order.deliveryAddress or order.deliveryCity or order.deliveryPostcode %}
                <div class="info-section-title">Adresse de livraison</div>
                <div class="info-box">
                    {% if order.deliveryAddress %}
                        <div class="info-row">
                            <span class="info-label">Adresse :</span>
                            <span class="info-value">{{ order.deliveryAddress }}</span>
                        </div>
                    {% endif %}
                    {% if order.deliveryPostcode or order.deliveryCity %}
                        <div class="info-row">
                            <span class="info-label">Ville :</span>
                            <span class="info-value">
                                {% if order.deliveryPostcode %}{{ order.deliveryPostcode }}{% endif %}
                                {% if order.deliveryCity %} {{ order.deliveryCity }}{% endif %}
                            </span>
                        </div>
                    {% endif %}
                    {% if order.deliveryCountry %}
                        <div class="info-row">
                            <span class="info-label">Pays :</span>
                            <span class="info-value">{{ order.deliveryCountry }}</span>
                        </div>
                    {% endif %}
                </div>
            {% endif %}
        </div>
    </div>
</div>

{% if order.items is not empty %}
<div class="detail-card">
    <h2 class="detail-title">Produits commandés</h2>

    <div class="table-wrapper">
        <table class="products-table">
            <thead>
                <tr>
                    <th class="text-left">Produit</th>
                    <th class="text-center">Quantité</th>
                    <th class="text-right">Prix unitaire</th>
                    <th class="text-right">Marge</th>
                    <th class="text-right">Total</th>
                </tr>
            </thead>
            <tbody>
                {% for item in order.items %}
                <tr>
                    <td>
                        <div class="product-name">{{ item.productName }}</div>
                        {% if item.productReference %}
                            <div class="product-ref">Réf: {{ item.productReference }}</div>
                        {% endif %}
                    </td>
                    <td class="text-center">
                        <span class="quantity-badge">{{ item.quantity }}</span>
                    </td>
                    <td class="text-right unit-price">
                        {{ item.unitPrice|number_format(2, ',', ' ') }} €
                    </td>
                    <td class="text-right">
                        {% if item.marginPercent is not null %}
                            {% set margin = item.marginPercent %}
                            {% set marginClass = 'excellent' %}
                            {% if margin < 15 %}
                                {% set marginClass = 'low' %}
                            {% elseif margin < 30 %}
                                {% set marginClass = 'fair' %}
                            {% elseif margin < 50 %}
                                {% set marginClass = 'good' %}
                            {% endif %}
                            <span class="margin-badge-item {{ marginClass }}">{{ margin }}%</span>
                        {% else %}
                            <span class="no-data">N/A</span>
                        {% endif %}
                    </td>
                    <td class="text-right item-total">
                        {{ item.totalPrice|number_format(2, ',', ' ') }} €
                    </td>
                </tr>
                {% endfor %}
            </tbody>
            <tfoot>
                <tr>
                    <td colspan="4" class="text-right footer-label">TOTAL :</td>
                    <td class="text-right footer-total">{{ order.totalPaid|number_format(2, ',', ' ') }} €</td>
                </tr>
            </tfoot>
        </table>
    </div>
</div>
{% else %}
<div class="detail-card empty-warning">
    <div class="empty-content">
        <div class="empty-icon">ℹ️</div>
        <div>
            <h3 class="empty-title">Aucun produit trouvé</h3>
            <p class="empty-description">
                Les détails des produits de cette commande n'ont pas encore été collectés. Relancez la collecte des commandes pour obtenir ces informations.
            </p>
        </div>
    </div>
</div>
{% endif %}

{% endblock %}

{% block javascripts %}
<script>
document.addEventListener('DOMContentLoaded', function() {
    const tableWrapper = document.querySelector('.table-wrapper');
    if (tableWrapper) {
        function updateScrollIndicators() {
            const scrollLeft = tableWrapper.scrollLeft;
            const scrollWidth = tableWrapper.scrollWidth;
            const clientWidth = tableWrapper.clientWidth;
            const maxScroll = scrollWidth - clientWidth;

            if (scrollLeft > 10) {
                tableWrapper.classList.add('scrolled-left');
            } else {
                tableWrapper.classList.remove('scrolled-left');
            }

            if (scrollLeft < maxScroll - 10) {
                tableWrapper.classList.add('scrolled-right');
            } else {
                tableWrapper.classList.remove('scrolled-right');
            }
        }

        tableWrapper.addEventListener('scroll', updateScrollIndicators);
        updateScrollIndicators();
        window.addEventListener('resize', updateScrollIndicators);
    }
});
</script>
{% endblock %}
