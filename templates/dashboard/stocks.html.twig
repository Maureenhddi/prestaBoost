{% extends 'base.html.twig' %}

{% block title %}Stocks - {{ boutique.name }}{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="/css/stocks.css?v={{ 'now'|date('YmdHis') }}">
    <style>
        {% if boutique.primaryColor %}
        :root {
            --primary: {{ boutique.primaryColor }};
        }

        body {
            background: linear-gradient(135deg, {{ boutique.primaryColor }} 0%, {{ boutique.primaryColor }}dd 100%);
        }

        body::before {
            background:
                radial-gradient(circle at 20% 50%, {{ boutique.primaryColor }}26 0%, transparent 50%),
                radial-gradient(circle at 80% 80%, {{ boutique.primaryColor }}26 0%, transparent 50%),
                radial-gradient(circle at 40% 20%, {{ boutique.primaryColor }}26 0%, transparent 50%);
        }
        {% endif %}
    </style>
{% endblock %}

{% block navbar %}
<div class="container">
    <nav class="navbar">
        <div class="navbar-brand">
            {% if boutique.logoUrl %}
                <img src="{{ boutique.logoUrl }}" alt="{{ boutique.name }}" style="max-height: 40px;">
            {% else %}
                {{ boutique.name }}
            {% endif %}
        </div>
        <ul class="navbar-menu">
            <li><a href="{{ path('app_dashboard') }}">‚Üê Mes Boutiques</a></li>
            <li><a href="{{ path('app_boutique_dashboard', {id: boutique.id}) }}">Dashboard</a></li>
            <li><a href="{{ path('app_boutique_stocks', {id: boutique.id}) }}" class="active">Stocks</a></li>
            <li><a href="{{ path('app_boutique_orders', {id: boutique.id}) }}">Commandes</a></li>
            <li><a href="{{ path('app_boutique_settings', {id: boutique.id}) }}">Param√®tres</a></li>
            {% if app.user.isSuperAdmin() %}
                <li><a href="{{ path('app_users') }}">Utilisateurs</a></li>
            {% endif %}
            <li><a href="{{ path('app_logout') }}">D√©connexion</a></li>
        </ul>
    </nav>
</div>
{% endblock %}

{% block body %}

<div class="page-header">
    <div class="page-title">
        <h1>{{ boutique.name }}</h1>
        <p>{{ boutique.domain }}</p>
    </div>
    <a href="{{ path('app_dashboard') }}" class="btn btn-secondary">Retour</a>
</div>

<div class="card">
    <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 1.5rem;">
        <h2 style="margin: 0; font-size: 1.5rem; font-weight: 700;">√âvolution des stocks</h2>

        <div style="display: flex; align-items: center; gap: 0.75rem;">
            <label for="daysSelector" style="font-weight: 600; color: var(--gray-700); font-size: 0.875rem;">Afficher :</label>
            <select id="daysSelector"
                    style="padding: 0.5rem 1rem; border: 1px solid var(--gray-300); border-radius: var(--radius-md); background: white; font-size: 0.875rem; font-weight: 600; cursor: pointer;">
                <option value="1" {{ days == 1 ? 'selected' : '' }}>1 jour</option>
                <option value="2" {{ days == 2 ? 'selected' : '' }}>2 jours</option>
                <option value="3" {{ days == 3 ? 'selected' : '' }}>3 jours</option>
                <option value="4" {{ days == 4 ? 'selected' : '' }}>4 jours</option>
                <option value="5" {{ days == 5 ? 'selected' : '' }}>5 jours</option>
                <option value="6" {{ days == 6 ? 'selected' : '' }}>6 jours</option>
                <option value="7" {{ days == 7 ? 'selected' : '' }}>7 jours</option>
            </select>
        </div>
    </div>

    <div style="display: flex; gap: 0.75rem; margin-bottom: 1.5rem; flex-wrap: wrap;">
        <a href="{{ path('app_boutique_stocks', {id: boutique.id, filter: 'all', search: search, days: days}) }}"
           class="filter-btn {{ filter == 'all' ? 'active' : '' }}">
            Tous ({{ stats.total }})
        </a>
        <a href="{{ path('app_boutique_stocks', {id: boutique.id, filter: 'low', search: search, days: days}) }}"
           class="filter-btn {{ filter == 'low' ? 'active' : '' }}">
            Stock faible ({{ stats.lowStock }})
        </a>
        <a href="{{ path('app_boutique_stocks', {id: boutique.id, filter: 'outofstock', search: search, days: days}) }}"
           class="filter-btn {{ filter == 'outofstock' ? 'active' : '' }}">
            Rupture ({{ stats.outOfStock }})
        </a>
    </div>

    <form method="get" action="{{ path('app_boutique_stocks', {id: boutique.id}) }}" class="search-bar">
        <input type="hidden" name="filter" value="{{ filter }}">
        <input type="hidden" name="days" value="{{ days }}">
        <input type="text"
               name="search"
               id="productSearch"
               value="{{ search }}"
               placeholder="üîç Rechercher un produit (nom ou r√©f√©rence)..."
               class="search-input">
    </form>

    <div style="margin-bottom: 1.5rem;">
        <p style="margin: 0; color: var(--gray-600); font-size: 0.875rem;">
            <span id="displayCount">{{ totalItems }}</span> produit<span id="pluralProducts">{{ totalItems > 1 ? 's' : '' }}</span> affich√©<span id="pluralDisplay">{{ totalItems > 1 ? 's' : '' }}</span>
        </p>
    </div>

    {% if stocksData.stocks is empty %}
        <div class="empty-state">
            <h3>Aucun stock disponible</h3>
            <p>Les donn√©es de stock pour cette boutique n'ont pas encore √©t√© collect√©es.</p>
            <p style="font-size: 14px; opacity: 0.5;">Utilisez la commande <code>make collect-boutique ID={{ boutique.id }}</code> pour collecter les donn√©es.</p>
        </div>
    {% else %}
        <div class="table-container">
            <table>
                <thead>
                    <tr>
                        <th>R√©f√©rence</th>
                        <th>Nom du produit</th>
                        {% for date in stocksData.dates %}
                            <th style="text-align: center;">{{ date.label }}</th>
                        {% endfor %}
                        <th style="text-align: center;">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for stock in stocksData.stocks %}
                        <tr>
                            <td><strong>{{ stock.reference ?? '-' }}</strong></td>
                            <td>{{ stock.name }}</td>
                            {% for i in 0..(stocksData.dates|length - 1) %}
                                {% set quantity = attribute(stock, 'day_' ~ i ~ '_quantity') %}
                                <td style="text-align: center;">
                                    {% if quantity is not null %}
                                        {% if quantity == 0 %}
                                            <span style="color: #dc3545; font-weight: 600;">{{ quantity }}</span>
                                        {% elseif quantity < 10 %}
                                            <span style="color: #f59e0b; font-weight: 600;">{{ quantity }}</span>
                                        {% else %}
                                            <span style="color: #10b981; font-weight: 600;">{{ quantity }}</span>
                                        {% endif %}
                                    {% else %}
                                        <span style="opacity: 0.3;">-</span>
                                    {% endif %}
                                </td>
                            {% endfor %}
                            <td style="text-align: center;">
                                <a href="{{ path('app_product_history', {boutiqueId: boutique.id, productId: stock.product_id}) }}"
                                   class="btn-chart"
                                   title="Voir l'historique">
                                    üìà
                                </a>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>

        {% if totalPages > 1 %}
        <div class="pagination">
            {% if currentPage > 1 %}
                <a href="{{ path('app_boutique_stocks', {id: boutique.id, page: 1, filter: filter, search: search, days: days}) }}" class="pagination-btn">
                    &laquo; Premi√®re
                </a>
                <a href="{{ path('app_boutique_stocks', {id: boutique.id, page: currentPage - 1, filter: filter, search: search, days: days}) }}" class="pagination-btn">
                    &lsaquo; Pr√©c√©dente
                </a>
            {% endif %}

            <span class="pagination-info">
                Page {{ currentPage }} sur {{ totalPages }}
            </span>

            {% if currentPage < totalPages %}
                <a href="{{ path('app_boutique_stocks', {id: boutique.id, page: currentPage + 1, filter: filter, search: search, days: days}) }}" class="pagination-btn">
                    Suivante &rsaquo;
                </a>
                <a href="{{ path('app_boutique_stocks', {id: boutique.id, page: totalPages, filter: filter, search: search, days: days}) }}" class="pagination-btn">
                    Derni√®re &raquo;
                </a>
            {% endif %}
        </div>
        {% endif %}
    {% endif %}
</div>

{% block javascripts %}
<script>
document.addEventListener('DOMContentLoaded', function() {
    const searchInput = document.getElementById('productSearch');
    const searchForm = searchInput?.closest('form');

    if (searchInput && searchForm) {
        let searchTimeout;

        searchInput.addEventListener('input', function() {
            clearTimeout(searchTimeout);

            // Auto-submit apr√®s 500ms d'inactivit√©
            searchTimeout = setTimeout(() => {
                searchForm.submit();
            }, 500);
        });

        // Submit imm√©diat sur Enter
        searchInput.addEventListener('keypress', function(e) {
            if (e.key === 'Enter') {
                clearTimeout(searchTimeout);
                searchForm.submit();
            }
        });
    }

    // Handle days selector change
    const daysSelector = document.getElementById('daysSelector');
    if (daysSelector) {
        daysSelector.addEventListener('change', function() {
            const url = new URL(window.location.href);
            url.searchParams.set('days', this.value);
            url.searchParams.delete('page'); // Reset pagination
            window.location.href = url.href;
        });
    }
});
</script>
{% endblock %}

{% endblock %}
