<script>
document.addEventListener('DOMContentLoaded', function() {
    const boutiqueId = {{ boutique.id }};
    const comparePeriod = 'lastweek'; // You can make this dynamic later

    // Fetch orders statistics
    fetch(`/api/orders/boutique/${boutiqueId}/statistics?compare=${comparePeriod}`)
        .then(response => response.json())
        .then(data => {
            if (!data.success) {
                console.error('Error fetching orders data:', data.error);
                return;
            }

            // Update revenue card
            const revenueAmount = document.getElementById('revenue-amount');
            const revenueVariation = document.getElementById('revenue-variation');

            revenueAmount.textContent = new Intl.NumberFormat('fr-FR', {
                style: 'currency',
                currency: 'EUR'
            }).format(data.current.revenue);

            if (data.variations.revenue !== 0) {
                const variationClass = data.variations.revenue > 0 ? 'positive' : 'negative';
                const arrow = data.variations.revenue > 0 ? '↑' : '↓';

                revenueVariation.querySelector('.variation-arrow').textContent = arrow;
                revenueVariation.querySelector('.variation-text').textContent =
                    Math.abs(data.variations.revenue) + '% vs période précédente';
                revenueVariation.className = 'stat-variation ' + variationClass;
                revenueVariation.style.display = 'flex';
            }

            // Update orders count card
            const ordersCount = document.getElementById('orders-count');
            const ordersVariation = document.getElementById('orders-variation');

            ordersCount.textContent = data.current.orderCount;

            if (data.variations.orderCount !== 0) {
                const variationClass = data.variations.orderCount > 0 ? 'positive' : 'negative';
                const arrow = data.variations.orderCount > 0 ? '↑' : '↓';

                ordersVariation.querySelector('.variation-arrow').textContent = arrow;
                ordersVariation.querySelector('.variation-text').textContent =
                    Math.abs(data.variations.orderCount) + '% vs période précédente';
                ordersVariation.className = 'stat-variation ' + variationClass;
                ordersVariation.style.display = 'flex';
            }

            // Update recent orders
            const recentOrdersCard = document.getElementById('recent-orders-card');
            const ordersEmpty = document.getElementById('orders-empty');
            const ordersList = document.getElementById('orders-list');

            if (data.recentOrders && data.recentOrders.length > 0) {
                recentOrdersCard.style.display = 'block';
                ordersEmpty.style.display = 'none';
                ordersList.style.display = 'block';

                ordersList.innerHTML = data.recentOrders.map(order => {
                    const orderDate = new Date(order.orderDate);
                    const formattedDate = orderDate.toLocaleDateString('fr-FR', {
                        day: '2-digit',
                        month: 'short',
                        year: 'numeric',
                        hour: '2-digit',
                        minute: '2-digit'
                    });

                    const amount = parseFloat(order.totalPaid);
                    const formattedAmount = new Intl.NumberFormat('fr-FR', {
                        style: 'currency',
                        currency: 'EUR'
                    }).format(amount);

                    return `
                        <div class="order-item">
                            <div class="order-info">
                                <div class="order-reference">Commande #${order.reference || order.orderId}</div>
                                <div class="order-date">${formattedDate} - ${order.payment || 'Non spécifié'}</div>
                            </div>
                            <div class="order-amount">${formattedAmount}</div>
                        </div>
                    `;
                }).join('');
            } else if (data.current.orderCount === 0) {
                recentOrdersCard.style.display = 'block';
                ordersEmpty.style.display = 'block';
                ordersList.style.display = 'none';
            }
        })
        .catch(error => {
            console.error('Error fetching orders statistics:', error);
        });
});
</script>

