                    </th>
                    <th>
                        <a href="{{ path('app_boutique_orders', {id: boutique.id, page: currentPage, search: search, status: status, period: period, start_date: startDate, end_date: endDate, sort: 'margin', order: (sort == 'margin' and order == 'asc') ? 'desc' : 'asc'}) }}" class="sortable-header">
                            Marge
                            <span class="sort-icon {{ sort == 'margin' ? 'active' : '' }}">
                                <span class="sort-up">{{ (sort == 'margin' and order == 'asc') ? '▲' : '△' }}</span>
                                <span class="sort-down">{{ (sort == 'margin' and order == 'desc') ? '▼' : '▽' }}</span>
                            </span>
                        </a>
                    </th>
                    <th>Paiement</th>
                    <th>Statut</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                {% for order in orders %}
                <tr>
                    <td>
                        <div class="order-ref">{{ order.reference ?: 'N/A' }}</div>
                    </td>
                    <td>
                        <div style="font-weight: 600; color: var(--gray-700);">#{{ order.orderId }}</div>
                    </td>
                    <td>
                        <div class="order-date">
                            {{ order.orderDate|date('d/m/Y à H:i') }}
                        </div>
                    </td>
                    <td>
                        <div class="order-amount">{{ order.totalPaid|number_format(2, ',', ' ') }} €</div>
                    </td>
                    <td>
                        {% if order.hasMarginData %}
                            {% set margin = order.marginPercent %}
                            {% set marginClass = 'margin-unavailable' %}
                            {% if margin >= 50 %}
                                {% set marginClass = 'margin-excellent' %}
                            {% elseif margin >= 30 %}
                                {% set marginClass = 'margin-good' %}
                            {% elseif margin >= 15 %}
                                {% set marginClass = 'margin-fair' %}
                            {% elseif margin >= 0 %}
                                {% set marginClass = 'margin-low' %}
                            {% endif %}
                            <span class="margin-badge {{ marginClass }}">{{ margin }}%</span>
                        {% else %}
                            <span class="margin-badge margin-unavailable">N/A</span>
                        {% endif %}
                    </td>
                    <td>{{ order.payment ?: 'N/A' }}</td>
                    <td>
                        {% set statusClass = 'pending' %}
                        {% set statusText = 'En attente' %}
                        {% if order.currentState == '2' %}
                            {% set statusClass = 'processing' %}
                            {% set statusText = 'Paiement OK' %}
                        {% elseif order.currentState == '3' %}
                            {% set statusClass = 'processing' %}
                            {% set statusText = 'Préparation' %}
                        {% elseif order.currentState == '4' %}
                            {% set statusClass = 'processing' %}
                            {% set statusText = 'Expédié' %}
                        {% elseif order.currentState == '5' %}
                            {% set statusClass = 'completed' %}
                            {% set statusText = 'Livré' %}
                        {% elseif order.currentState == '6' %}
                            {% set statusClass = 'cancelled' %}
                            {% set statusText = 'Annulé' %}
                        {% endif %}
                        <span class="status-badge status-{{ statusClass }}">{{ statusText }}</span>
                    </td>
                    <td>
                        <a href="{{ path('app_order_detail', {boutiqueId: boutique.id, orderId: order.id}) }}" class="btn-view">Détails</a>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
        </div>

        {% if totalPages > 1 %}
        <div class="pagination">
            {% if currentPage > 1 %}
                <a href="{{ path('app_boutique_orders', {id: boutique.id, page: currentPage - 1, period: period, search: search, status: status, start_date: startDate, end_date: endDate}) }}">← Précédent</a>
            {% endif %}

            {% for page in 1..totalPages %}
                {% if page == currentPage %}
                    <span class="current">{{ page }}</span>
                {% elseif page == 1 or page == totalPages or (page >= currentPage - 2 and page <= currentPage + 2) %}
                    <a href="{{ path('app_boutique_orders', {id: boutique.id, page: page, period: period, search: search, status: status, start_date: startDate, end_date: endDate}) }}">{{ page }}</a>
                {% elseif page == currentPage - 3 or page == currentPage + 3 %}
                    <span>...</span>
                {% endif %}
            {% endfor %}

            {% if currentPage < totalPages %}
                <a href="{{ path('app_boutique_orders', {id: boutique.id, page: currentPage + 1, period: period, search: search, status: status, start_date: startDate, end_date: endDate}) }}">Suivant →</a>
            {% endif %}
        </div>
        {% endif %}
    {% endif %}
</div>

{% endblock %}
