{% extends 'base.html.twig' %}

{% block title %}Mes Boutiques - PrestaBoost{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="/css/dashboard.css?v={{ 'now'|date('YmdHis') }}">
{% endblock %}

{% block navbar %}
<div class="container">
    <nav class="navbar">
        <div class="navbar-brand">PrestaBoost</div>
        <ul class="navbar-menu">
            <li><a href="{{ path('app_dashboard') }}" class="active">Mes Boutiques</a></li>
            {% if app.user.isSuperAdmin() %}
                <li><a href="{{ path('app_users') }}">Utilisateurs</a></li>
            {% endif %}
            <li><a href="{{ path('app_logout') }}">Déconnexion</a></li>
        </ul>
    </nav>
</div>
{% endblock %}

{% block body %}

<div class="welcome-section">
    <h1>Bienvenue, {{ app.user.firstName }} !</h1>
    <p>Sélectionnez une boutique pour voir son dashboard</p>
</div>

<div class="boutiques-grid">
    {% for boutique in boutiques %}
        {% set boutiqueColor = boutique.primaryColor ?? '#10b981' %}
        <a href="{{ path('app_boutique_dashboard', {id: boutique.id}) }}" class="boutique-card">
            <div class="boutique-header" style="background: linear-gradient(135deg, {{ boutiqueColor }} 0%, {{ boutiqueColor }}dd 100%);">
                {% if boutique.logoUrl %}
                    <img src="{{ boutique.logoUrl }}" alt="{{ boutique.name }}" class="boutique-logo">
                {% else %}
                    <div class="boutique-logo-placeholder">{{ boutique.name|slice(0, 2)|upper }}</div>
                {% endif %}
            </div>
            <div class="boutique-body">
                <h3>{{ boutique.name }}</h3>
                <p class="boutique-domain">{{ boutique.domain }}</p>
            </div>
            <div class="boutique-footer">
                <span class="btn-view" style="color: {{ boutiqueColor }};">Voir le dashboard →</span>
            </div>
        </a>
    {% else %}
        <div class="empty-state">
            <h3>Aucune boutique</h3>
            <p>Vous n'avez pas encore de boutique connectée</p>
            {% if app.user.isSuperAdmin() %}
                <a href="{{ path('app_boutique_new') }}" class="btn btn-primary">Créer ma première boutique</a>
            {% endif %}
        </div>
    {% endfor %}
</div>

<style>
.welcome-section {
    text-align: center;
    margin-bottom: 50px;
}

.welcome-section h1 {
    font-size: 42px;
    font-weight: 700;
    color: var(--dark-text);
    margin-bottom: 10px;
}

.welcome-section p {
    font-size: 18px;
    color: var(--dark-text);
    opacity: 0.7;
}

.boutiques-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 30px;
    margin-top: 40px;
}

.boutique-card {
    background: white;
    border-radius: 20px;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
    overflow: hidden;
    transition: all 0.3s ease;
    text-decoration: none;
    color: inherit;
    display: flex;
    flex-direction: column;
}

.boutique-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 30px rgba(0, 0, 0, 0.15);
}

.boutique-header {
    padding: 40px 30px;
    display: flex;
    justify-content: center;
    align-items: center;
    min-height: 150px;
}

.boutique-logo {
    max-width: 120px;
    max-height: 80px;
    object-fit: contain;
    filter: brightness(0) invert(1);
}

.boutique-logo-placeholder {
    width: 80px;
    height: 80px;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.2);
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 32px;
    font-weight: 700;
    color: white;
    border: 3px solid rgba(255, 255, 255, 0.3);
}

.boutique-body {
    padding: 30px;
    flex: 1;
}

.boutique-body h3 {
    font-size: 24px;
    font-weight: 600;
    color: var(--dark-text);
    margin-bottom: 10px;
}

.boutique-domain {
    font-size: 14px;
    color: var(--dark-text);
    opacity: 0.6;
    margin: 0;
}

.boutique-footer {
    padding: 20px 30px;
    border-top: 1px solid rgba(0, 0, 0, 0.05);
}

.btn-view {
    display: inline-block;
    font-weight: 600;
    font-size: 16px;
    transition: opacity 0.3s ease;
}

.boutique-card:hover .btn-view {
    opacity: 0.8;
}

.empty-state {
    grid-column: 1 / -1;
    text-align: center;
    padding: 100px 20px;
}

.empty-state h3 {
    font-size: 28px;
    color: var(--dark-text);
    margin-bottom: 15px;
}

.empty-state p {
    font-size: 16px;
    color: var(--dark-text);
    opacity: 0.6;
    margin-bottom: 30px;
}
</style>

{% endblock %}
