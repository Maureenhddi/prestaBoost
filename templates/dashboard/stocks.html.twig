{% extends 'base.html.twig' %}

{% block title %}Stocks - {{ boutique.name }}{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="/css/stocks.css">
{% endblock %}

{% block navbar %}
<div class="container">
    <nav class="navbar">
        <div class="navbar-brand">PrestaBoost</div>
        <ul class="navbar-menu">
            <li><a href="{{ path('app_dashboard') }}">Dashboard</a></li>
            <li><a href="{{ path('app_boutiques') }}">Mes Boutiques</a></li>
            <li><a href="{{ path('app_logout') }}">D√©connexion</a></li>
        </ul>
    </nav>
</div>
{% endblock %}

{% block body %}

<div class="page-header">
    <div class="page-title">
        <h1>{{ boutique.name }}</h1>
        <p>{{ boutique.domain }}</p>
    </div>
    <a href="{{ path('app_dashboard') }}" class="btn btn-secondary">Retour</a>
</div>

<div class="card">
    <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 1.5rem;">
        <h2 style="margin: 0; font-size: 1.5rem; font-weight: 700;">Stocks actuels</h2>
        <div style="display: flex; align-items: center; gap: 1rem;">
            <label style="margin: 0; font-weight: 600; font-size: 0.875rem;">Comparer avec:</label>
            <select id="comparePeriod" onchange="const url = new URL(window.location); url.searchParams.set('compare', this.value); window.location.href = url.toString();">
                <option value="yesterday" {{ comparePeriod == 'yesterday' ? 'selected' : '' }}>Hier</option>
                <option value="lastweek" {{ comparePeriod == 'lastweek' ? 'selected' : '' }}>Semaine derni√®re</option>
                <option value="lastmonth" {{ comparePeriod == 'lastmonth' ? 'selected' : '' }}>Mois dernier</option>
            </select>
        </div>
    </div>

    <div style="display: flex; gap: 0.75rem; margin-bottom: 1.5rem; flex-wrap: wrap;">
        <a href="{{ path('app_boutique_stocks', {id: boutique.id, compare: comparePeriod, filter: 'all'}) }}"
           class="filter-btn {{ filter == 'all' ? 'active' : '' }}">
            Tous ({{ stats.total }})
        </a>
        <a href="{{ path('app_boutique_stocks', {id: boutique.id, compare: comparePeriod, filter: 'changes'}) }}"
           class="filter-btn {{ filter == 'changes' ? 'active' : '' }}">
            Avec changements ({{ stats.withChanges }})
        </a>
        <a href="{{ path('app_boutique_stocks', {id: boutique.id, compare: comparePeriod, filter: 'low'}) }}"
           class="filter-btn {{ filter == 'low' ? 'active' : '' }}">
            Stock faible ({{ stats.lowStock }})
        </a>
        <a href="{{ path('app_boutique_stocks', {id: boutique.id, compare: comparePeriod, filter: 'outofstock'}) }}"
           class="filter-btn {{ filter == 'outofstock' ? 'active' : '' }}">
            Rupture ({{ stats.outOfStock }})
        </a>
    </div>

    <div style="margin-bottom: 1.5rem;">
        <p style="margin: 0; color: var(--gray-600); font-size: 0.875rem;">
            {{ totalItems }} produit{{ totalItems > 1 ? 's' : '' }} affich√©{{ totalItems > 1 ? 's' : '' }}
        </p>
    </div>

    {% if stocks is empty %}
        <div class="empty-state">
            <h3>Aucun stock disponible</h3>
            <p>Les donn√©es de stock pour cette boutique n'ont pas encore √©t√© collect√©es.</p>
            <p style="font-size: 14px; opacity: 0.5;">Utilisez la commande <code>make collect-boutique ID={{ boutique.id }}</code> pour collecter les donn√©es.</p>
        </div>
    {% else %}
        <div class="table-container">
            <table>
                <thead>
                    <tr>
                        <th>R√©f√©rence</th>
                        <th>Nom du produit</th>
                        <th>Quantit√©</th>
                        <th>Variation</th>
                        <th>√âtat</th>
                        <th>Derni√®re mise √† jour</th>
                    </tr>
                </thead>
                <tbody>
                    {% for item in stocks %}
                        {% set stock = item.stock %}
                        {% set variation = item.variation %}
                        <tr>
                            <td><strong>{{ stock.reference ?? '-' }}</strong></td>
                            <td>{{ stock.name }}</td>
                            <td>{{ stock.quantity }}</td>
                            <td>
                                {% if variation is not null %}
                                    {% if variation > 0 %}
                                        <span style="color: #28a745; font-weight: 600;">üî∫ +{{ variation }}</span>
                                    {% elseif variation < 0 %}
                                        <span style="color: #dc3545; font-weight: 600;">üîª {{ variation }}</span>
                                    {% else %}
                                        <span style="color: var(--dark-text); opacity: 0.6;">‚û°Ô∏è 0</span>
                                    {% endif %}
                                {% else %}
                                    <span style="opacity: 0.4;">-</span>
                                {% endif %}
                            </td>
                            <td>
                                {% if stock.quantity == 0 %}
                                    <span class="stock-badge stock-out">Rupture</span>
                                {% elseif stock.quantity < 10 %}
                                    <span class="stock-badge stock-low">Stock faible</span>
                                {% elseif stock.quantity < 50 %}
                                    <span class="stock-badge stock-medium">Stock moyen</span>
                                {% else %}
                                    <span class="stock-badge stock-high">En stock</span>
                                {% endif %}
                            </td>
                            <td>{{ stock.collectedAt|date('d/m/Y H:i') }}</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>

        {% if totalPages > 1 %}
        <div class="pagination">
            {% if currentPage > 1 %}
                <a href="{{ path('app_boutique_stocks', {id: boutique.id, page: 1, compare: comparePeriod, filter: filter}) }}" class="pagination-btn">
                    &laquo; Premi√®re
                </a>
                <a href="{{ path('app_boutique_stocks', {id: boutique.id, page: currentPage - 1, compare: comparePeriod, filter: filter}) }}" class="pagination-btn">
                    &lsaquo; Pr√©c√©dente
                </a>
            {% endif %}

            <span class="pagination-info">
                Page {{ currentPage }} sur {{ totalPages }}
            </span>

            {% if currentPage < totalPages %}
                <a href="{{ path('app_boutique_stocks', {id: boutique.id, page: currentPage + 1, compare: comparePeriod, filter: filter}) }}" class="pagination-btn">
                    Suivante &rsaquo;
                </a>
                <a href="{{ path('app_boutique_stocks', {id: boutique.id, page: totalPages, compare: comparePeriod, filter: filter}) }}" class="pagination-btn">
                    Derni√®re &raquo;
                </a>
            {% endif %}
        </div>
        {% endif %}
    {% endif %}
</div>
{% endblock %}
