}

.insight-card.insight-warning {
    border-color: rgba(245, 158, 11, 0.2);
}

.insight-card.insight-success {
    border-color: rgba(16, 185, 129, 0.2);
}

.insight-header {
    padding: 24px 28px;
    background: linear-gradient(135deg, var(--gray-50) 0%, white 100%);
