    height: 48px;
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
}

.insight-warning .insight-icon {
    background: linear-gradient(135deg, #f59e0b, #d97706);
}

.insight-success .insight-icon {
    background: linear-gradient(135deg, #10b981, #059669);
}

.insight-icon svg {
    color: white;
}

.insight-title h3 {
    font-size: 18px;
    font-weight: 700;
    color: var(--gray-900);
    margin-bottom: 4px;
}

.insight-title p {
    font-size: 13px;
    color: var(--gray-600);
    margin: 0;
}

.empty-state {
    padding: 60px 30px;
    text-align: center;
}

.empty-state svg {
    margin-bottom: 16px;
}

.empty-state p {
    font-size: 18px;
    font-weight: 600;
    color: var(--gray-700);
    margin-bottom: 6px;
