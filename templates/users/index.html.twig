{% extends 'base.html.twig' %}

{% block title %}Gestion des Utilisateurs - PrestaBoost{% endblock %}

{% block sidebar %}
    {% include '_sidebar_global.html.twig' with {'activeRoute': 'app_users'} %}
{% endblock %}

{% block body %}
<div class="page-header">
    <h1>Gestion des Utilisateurs</h1>
    <a href="{{ path('app_user_new') }}" class="btn btn-primary">Créer un utilisateur</a>
</div>

<div class="users-table-card">
    <div class="table-scroll-wrapper">
        <table class="users-table">
            <thead>
                <tr>
                    <th>Nom</th>
                    <th>Email</th>
                    <th>Rôle</th>
                    <th>Boutiques</th>
                    <th class="actions-column">Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for user in users %}
                    <tr>
                        <td data-label="Nom">
                            <div class="user-name">{{ user.firstName }} {{ user.lastName }}</div>
                        </td>
                        <td data-label="Email">
                            <div class="user-email">{{ user.email }}</div>
                        </td>
                        <td data-label="Rôle">
                            {% if user.isSuperAdmin() %}
                                <span class="role-badge admin">Super Admin</span>
                            {% else %}
                                <span class="role-badge user">Utilisateur</span>
                            {% endif %}
                        </td>
                        <td data-label="Boutiques">
                            <div class="user-boutiques">
                                {% if user.isSuperAdmin() %}
                                    Toutes
                                {% else %}
                                    {{ user.boutiqueUsers|length }} boutique(s)
                                {% endif %}
                            </div>
                        </td>
                        <td data-label="Actions" class="actions-column">
                            <div class="user-actions">
                                <a href="{{ path('app_user_edit', {id: user.id}) }}" class="btn btn-secondary btn-sm">Modifier</a>
                                {% if user.id != app.user.id %}
                                    <form method="post" action="{{ path('app_user_delete', {id: user.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cet utilisateur ?');">
                                        <button type="submit" class="btn btn-danger btn-sm">Supprimer</button>
                                    </form>
                                {% endif %}
                            </div>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5" class="empty-state">
                            <p>Aucun utilisateur trouvé</p>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}

{% block javascripts %}
<script>
document.addEventListener('DOMContentLoaded', function() {
    const tableScrollWrapper = document.querySelector('.users-table-card .table-scroll-wrapper');
    if (tableScrollWrapper) {
        function updateScrollIndicators() {
            const scrollLeft = tableScrollWrapper.scrollLeft;
            const scrollWidth = tableScrollWrapper.scrollWidth;
            const clientWidth = tableScrollWrapper.clientWidth;
            const maxScroll = scrollWidth - clientWidth;

            // Add/remove classes based on scroll position
            if (scrollLeft > 10) {
                tableScrollWrapper.classList.add('scrolled-left');
            } else {
                tableScrollWrapper.classList.remove('scrolled-left');
            }

            if (scrollLeft < maxScroll - 10) {
                tableScrollWrapper.classList.add('scrolled-right');
            } else {
                tableScrollWrapper.classList.remove('scrolled-right');
            }
        }

        // Update on scroll
        tableScrollWrapper.addEventListener('scroll', updateScrollIndicators);

        // Update on load and resize
        updateScrollIndicators();
        window.addEventListener('resize', updateScrollIndicators);
    }
});
</script>
{% endblock %}
