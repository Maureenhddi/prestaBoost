{% extends 'base.html.twig' %}

{% block title %}Stocks - {{ boutique.name }}{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="/css/dashboard.css?v={{ 'now'|date('YmdHis') }}">
    <style>
        {% if boutique.primaryColor %}
        :root {
            --primary: {{ boutique.primaryColor }};
        }
        body {
            background: linear-gradient(135deg, {{ boutique.primaryColor }} 0%, {{ boutique.primaryColor }}dd 100%);
        }
        body::before {
            background:
                radial-gradient(circle at 20% 50%, {{ boutique.primaryColor }}26 0%, transparent 50%),
                radial-gradient(circle at 80% 80%, {{ boutique.primaryColor }}26 0%, transparent 50%),
                radial-gradient(circle at 40% 20%, {{ boutique.primaryColor }}26 0%, transparent 50%);
        }
        {% endif %}

        .filters-card {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(20px);
            border-radius: 16px;
            padding: 16px 20px;
            margin-bottom: 16px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
        }

        .filters-grid {
            display: flex;
            flex-direction: column;
            gap: 12px;
        }

        .filters-row {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 12px;
        }

        .date-filters-row {
            display: flex;
            flex-direction: column;
            gap: 12px;
            padding: 16px;
            background: var(--gray-50);
            border-radius: 10px;
            border: 1px dashed var(--gray-300);
        }

        .date-filters-row .filter-group label {
            font-weight: 700;
        }

        .date-row {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 20px;
        }

        .checkboxes-row {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 20px;
        }

        @media (max-width: 1024px) {
            .filters-card {
                padding: 24px 28px;
            }

            .filters-grid {
                gap: 24px;
            }

            .date-filters-row {
                padding: 20px;
            }
        }

        @media (max-width: 768px) {
            .filters-card {
                padding: 20px 20px;
            }

            .date-row,
            .checkboxes-row {
                grid-template-columns: 1fr;
            }

            .filters-row {
                grid-template-columns: 1fr;
            }

            .filter-badges-container {
                gap: 12px;
            }

            .filter-badge {
                padding: 10px 16px;
                font-size: 13px;
            }

            .filter-badge-icon {
                font-size: 16px;
            }

            .days-input-group {
                flex-wrap: wrap;
            }

            .quick-days-btn {
                flex: 1;
                min-width: 60px;
            }

            .days-input-group input {
                flex: 1;
                min-width: 80px;
            }

            .checkbox-label {
                padding: 12px 14px;
            }

            .checkbox-title {
                font-size: 13px;
            }

            .checkbox-subtitle {
                font-size: 10px;
            }

            .stocks-table-card {
                margin-left: -20px;
                margin-right: -20px;
                border-radius: 0;
            }

            .stocks-table th {
                font-size: 11px;
                padding: 12px 10px;
            }

            .stocks-table td {
                font-size: 13px;
                padding: 12px 10px;
            }

            /* Reduce sticky column width on tablet */
            .stocks-table th:nth-child(2),
            .stocks-table td:nth-child(2) {
                left: 80px;
                min-width: 200px;
            }

            .quantity-badge {
                font-size: 12px;
                padding: 3px 8px;
            }

            .btn-view,
            .btn-detail {
                font-size: 12px;
                padding: 6px 12px;
            }

            .actions-cell {
                flex-direction: column;
                gap: 6px;
            }

        }

        @media (max-width: 480px) {
            .filters-card {
                padding: 16px 12px;
                border-radius: 12px;
            }

            .filters-grid {
                gap: 20px;
            }

            .filters-row {
                gap: 16px;
            }

            .filter-group label {
                font-size: 12px;
                margin-bottom: 8px;
            }

            .filter-group input,
            .filter-group select {
                padding: 10px 12px;
                font-size: 13px;
            }

            .filter-badges-container {
                gap: 10px;
            }

            .filter-badge {
                padding: 10px 14px;
                font-size: 12px;
                flex: 1 1 auto;
                min-width: calc(50% - 5px);
            }

            .filter-badge-icon {
                font-size: 14px;
            }

            .filter-badge-text {
                font-size: 12px;
            }

            .days-input-group {
                display: grid;
                grid-template-columns: repeat(3, 1fr);
                gap: 8px;
            }

            .quick-days-btn {
                padding: 10px 8px;
                font-size: 12px;
            }

            .days-input-group input {
                grid-column: 1 / -1;
                width: 100%;
            }

            .date-filters-row {
                padding: 16px;
                gap: 16px;
            }

            .date-row {
                gap: 16px;
            }

            .checkboxes-row {
                gap: 12px;
            }

            .checkbox-label {
                padding: 12px 12px;
                gap: 10px;
            }

            .checkbox-label input[type="checkbox"] {
                width: 20px;
                height: 20px;
            }

            .checkbox-title {
                font-size: 12px;
            }

            .checkbox-subtitle {
                font-size: 9px;
            }

            .filter-actions {
                flex-direction: column;
                gap: 12px;
                margin-top: 20px;
            }

            .btn-filter {
                width: 100%;
                padding: 12px 20px;
                font-size: 14px;
            }

            /* Disable sticky columns on small mobile for better scrolling */
            .stocks-table th:first-child,
            .stocks-table td:first-child,
            .stocks-table th:nth-child(2),
            .stocks-table td:nth-child(2) {
                position: static !important;
                background: inherit !important;
                box-shadow: none !important;
                left: auto !important;
            }

            .stocks-table tbody tr:nth-child(even) td:first-child,
            .stocks-table tbody tr:nth-child(even) td:nth-child(2) {
                background: inherit !important;
            }

            .stocks-table tbody tr:hover td:first-child,
            .stocks-table tbody tr:hover td:nth-child(2) {
                background: var(--gray-50) !important;
            }

            .stocks-table {
                min-width: 600px;
            }

        }

        .filter-group label {
            display: block;
            font-size: 12px;
            font-weight: 600;
            color: var(--gray-700);
            margin-bottom: 6px;
        }

        .filter-group input,
        .filter-group select {
            width: 100%;
            padding: 6px 10px;
            border: 2px solid var(--gray-300);
            border-radius: 8px;
            font-size: 13px;
            transition: all 0.2s ease;
        }

        .filter-group input:focus,
        .filter-group select:focus {
            outline: none;
            border-color: var(--primary);
            box-shadow: 0 0 0 3px rgba(16, 185, 129, 0.1);
        }

        .filter-actions {
            display: flex;
            gap: 12px;
            margin-top: 12px;
        }

        .btn-filter {
            padding: 8px 16px;
            border-radius: 8px;
            font-size: 13px;
            font-weight: 600;
            border: none;
            cursor: pointer;
            transition: all 0.2s ease;
        }

        .btn-filter.primary {
            background: var(--primary);
            color: white;
        }

        .btn-filter.primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(16, 185, 129, 0.3);
        }

        .btn-filter.secondary {
            background: var(--gray-200);
            color: var(--gray-700);
        }

        .btn-filter.secondary:hover {
            background: var(--gray-300);
        }

        .stocks-table-card {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(20px);
            border-radius: 20px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
            overflow: hidden;
            max-width: 100%;
        }

        .table-scroll-wrapper {
            overflow-x: auto;
            overflow-y: visible;
            -webkit-overflow-scrolling: touch;
            width: 100%;
            max-width: 100%;
            position: relative;
        }

        /* Scroll indicators */
        .table-scroll-wrapper::before,
        .table-scroll-wrapper::after {
            content: '';
            position: absolute;
            top: 0;
            bottom: 20px;
            width: 40px;
            pointer-events: none;
            z-index: 5;
            opacity: 0;
            transition: opacity 0.3s ease;
        }

        .table-scroll-wrapper::before {
            left: 0;
            background: linear-gradient(to right, rgba(0, 0, 0, 0.1), transparent);
        }

        .table-scroll-wrapper::after {
            right: 0;
            background: linear-gradient(to left, rgba(0, 0, 0, 0.1), transparent);
        }

        .table-scroll-wrapper.scrolled-left::before {
            opacity: 1;
        }

        .table-scroll-wrapper.scrolled-right::after {
            opacity: 1;
        }

        .table-scroll-wrapper::-webkit-scrollbar {
            height: 12px;
        }

        .table-scroll-wrapper::-webkit-scrollbar-track {
            background: var(--gray-100);
            border-radius: 6px;
        }

        .table-scroll-wrapper::-webkit-scrollbar-thumb {
            background: var(--primary);
            border-radius: 6px;
            border: 2px solid var(--gray-100);
        }

        .table-scroll-wrapper::-webkit-scrollbar-thumb:hover {
            background: var(--primary);
            opacity: 0.8;
        }

        .stocks-table {
            width: 100%;
            border-collapse: collapse;
            min-width: 800px;
        }

        .stocks-table th:first-child,
        .stocks-table td:first-child {
            position: sticky;
            left: 0;
            background: white;
            z-index: 10;
            box-shadow: 2px 0 4px rgba(0, 0, 0, 0.05);
        }

        .stocks-table thead th:first-child {
            background: linear-gradient(135deg, var(--gray-50) 0%, white 100%);
            z-index: 11;
        }

        .stocks-table th:nth-child(2),
        .stocks-table td:nth-child(2) {
            position: sticky;
            left: 100px;
            background: white;
            z-index: 10;
            min-width: 250px;
            box-shadow: 2px 0 4px rgba(0, 0, 0, 0.05);
        }

        .stocks-table thead th:nth-child(2) {
            background: linear-gradient(135deg, var(--gray-50) 0%, white 100%);
            z-index: 11;
        }

        /* Zebra striping for better row tracking */
        .stocks-table tbody tr:nth-child(even) {
            background: rgba(249, 250, 251, 0.5);
        }

        .stocks-table tbody tr:nth-child(even) td:first-child,
        .stocks-table tbody tr:nth-child(even) td:nth-child(2) {
            background: rgba(249, 250, 251, 0.95);
        }

        .stocks-table tbody tr:hover {
            background: var(--gray-50);
        }

        .stocks-table tbody tr:hover td:first-child,
        .stocks-table tbody tr:hover td:nth-child(2) {
            background: var(--gray-50);
        }

        .stocks-table thead {
            background: linear-gradient(135deg, var(--gray-50) 0%, white 100%);
        }

        .stocks-table th {
            padding: 16px 20px;
            text-align: left;
            font-size: 13px;
            font-weight: 700;
            color: var(--gray-700);
            text-transform: uppercase;
            letter-spacing: 0.5px;
            border-bottom: 2px solid var(--gray-200);
        }

        .stocks-table th.center {
            text-align: center;
        }

        .sortable-header {
            cursor: pointer;
            user-select: none;
            transition: all 0.2s ease;
            display: inline-flex;
            align-items: center;
            gap: 8px;
            text-decoration: none;
            color: var(--gray-700);
        }

        .sortable-header:hover {
            color: var(--primary);
        }

        .sort-icon {
            display: inline-flex;
            flex-direction: column;
            font-size: 10px;
            line-height: 1;
            opacity: 0.3;
            transition: opacity 0.2s ease;
        }

        .sortable-header:hover .sort-icon {
            opacity: 0.6;
        }

        .sort-icon.active {
            opacity: 1;
            color: var(--primary);
        }

        .sort-icon .sort-up,
        .sort-icon .sort-down {
            display: block;
            height: 6px;
        }

        .stocks-table tbody tr {
            border-bottom: 1px solid var(--gray-200);
            transition: all 0.2s ease;
        }

        .stocks-table tbody tr:hover {
            background: var(--gray-50);
        }

        .stocks-table td {
            padding: 16px 20px;
            font-size: 14px;
            color: var(--gray-900);
        }

        .product-ref {
            font-weight: 700;
            color: var(--primary);
        }

        .product-name {
            color: var(--gray-700);
            font-size: 13px;
        }

        .product-name a:hover {
            color: var(--primary) !important;
            text-decoration: underline !important;
        }

        .quantity-badge {
            display: inline-block;
            padding: 4px 10px;
            border-radius: 8px;
            font-size: 13px;
            font-weight: 700;
            min-width: 40px;
            text-align: center;
        }

        .qty-ok { background: #d1fae5; color: #065f46; }
        .qty-low { background: #fef3c7; color: #92400e; }
        .qty-out { background: #fee2e2; color: #991b1b; }
        .qty-na { background: var(--gray-200); color: var(--gray-600); }

        .day-cell-content {
            display: flex;
            flex-direction: column;
            gap: 6px;
            align-items: center;
            padding: 4px 0;
        }

        .sales-info {
            display: flex;
            flex-direction: column;
            gap: 3px;
            padding: 6px 8px;
            background: var(--gray-50);
            border-radius: 6px;
            border: 1px solid var(--gray-200);
            min-width: 80px;
        }

        .sales-row {
            display: flex;
            align-items: center;
            justify-content: space-between;
            gap: 8px;
            font-size: 11px;
        }

        .sales-label {
            color: var(--gray-500);
            font-weight: 500;
            text-transform: uppercase;
            font-size: 9px;
            letter-spacing: 0.5px;
        }

        .sales-value {
            font-weight: 700;
            color: var(--gray-700);
        }

        .sales-qty .sales-value {
            color: #0891b2;
        }

        .sales-revenue .sales-value {
            color: #059669;
        }

        .sales-info.has-sales {
            background: linear-gradient(135deg, #f0fdf4 0%, #ecfeff 100%);
            border-color: #a7f3d0;
        }

        /* Simple checkbox label styles */
        .checkbox-label {
            display: flex;
            align-items: center;
            padding: 10px 12px;
            border-radius: 8px;
            background: white;
            border: 2px solid var(--gray-200);
            transition: all 0.2s ease;
            cursor: pointer;
            gap: 10px;
        }

        .checkbox-label:hover {
            border-color: var(--primary);
            background: var(--gray-50);
        }

        .checkbox-label input[type="checkbox"] {
            width: 18px;
            height: 18px;
            cursor: pointer;
            flex-shrink: 0;
            accent-color: #0891b2;
        }

        .checkbox-label input[type="checkbox"]:checked ~ .checkbox-text .checkbox-title {
            color: #0891b2;
        }

        .checkbox-label input[type="checkbox"]:checked ~ .checkbox-text .checkbox-subtitle {
            color: #0e7490;
        }

        .checkbox-label:has(input[type="checkbox"]:checked) {
            border-color: #0891b2;
            background: linear-gradient(135deg, #f0fdfa 0%, #ecfeff 100%);
        }

        .checkbox-text {
            display: flex;
            flex-direction: column;
            gap: 4px;
            flex: 1;
        }

        .checkbox-title {
            font-size: 13px;
            font-weight: 600;
            color: var(--gray-700);
            transition: color 0.2s ease;
        }

        .checkbox-subtitle {
            font-size: 10px;
            color: var(--gray-500);
            line-height: 1.3;
            transition: color 0.2s ease;
        }

        .btn-view {
            padding: 8px 16px;
            background: var(--primary);
            color: white;
            border-radius: 8px;
            text-decoration: none;
            font-size: 13px;
            font-weight: 600;
            transition: all 0.2s ease;
            display: inline-block;
        }

        .btn-view:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(16, 185, 129, 0.3);
        }

        .btn-detail {
            padding: 8px 16px;
            background: #0891b2;
            color: white;
            border-radius: 8px;
            text-decoration: none;
            font-size: 13px;
            font-weight: 600;
            transition: all 0.2s ease;
            display: inline-block;
        }

        .btn-detail:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(8, 145, 178, 0.3);
        }

        .actions-cell {
            display: flex;
            gap: 8px;
            justify-content: center;
            align-items: center;
        }

        .pagination {
            display: flex;
            justify-content: center;
            align-items: center;
            gap: 8px;
            padding: 24px;
        }

        .pagination a,
        .pagination span {
            padding: 8px 12px;
            border-radius: 8px;
            font-size: 14px;
            font-weight: 600;
            text-decoration: none;
            transition: all 0.2s ease;
        }

        .pagination a {
            background: var(--gray-200);
            color: var(--gray-700);
        }

        .pagination a:hover {
            background: var(--primary);
            color: white;
        }

        .pagination .current {
            background: var(--primary);
            color: white;
        }

        .empty-state {
            padding: 80px 30px;
            text-align: center;
        }

        .empty-state svg {
            opacity: 0.2;
            margin-bottom: 20px;
        }

        .empty-state h3 {
            font-size: 20px;
            font-weight: 700;
            color: var(--gray-700);
            margin-bottom: 8px;
        }

        .empty-state p {
            font-size: 14px;
            color: var(--gray-500);
        }

        .quick-days-btn {
            padding: 8px 16px;
            border: 2px solid var(--gray-300);
            border-radius: 8px;
            background: white;
            color: var(--gray-700);
            font-size: 13px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.2s ease;
        }

        .quick-days-btn:hover {
            border-color: var(--primary);
            color: var(--primary);
        }

        .quick-days-btn.active {
            background: var(--primary);
            color: white;
            border-color: var(--primary);
        }

        .days-input-group {
            display: flex;
            align-items: center;
            gap: 8px;
        }

        .days-input-group input {
            width: 70px;
        }

        /* Filter badges styles */
        .filter-badges-container {
            display: flex;
            gap: 16px;
            flex-wrap: wrap;
        }

        .filter-badge-label {
            position: relative;
            cursor: pointer;
            user-select: none;
        }

        .filter-badge-label input[type="checkbox"] {
            position: absolute;
            opacity: 0;
            pointer-events: none;
        }

        .filter-badge {
            display: inline-flex;
            align-items: center;
            gap: 8px;
            padding: 12px 20px;
            border-radius: 12px;
            font-size: 14px;
            font-weight: 600;
            transition: all 0.25s cubic-bezier(0.4, 0, 0.2, 1);
            border: 2px solid transparent;
            position: relative;
            overflow: hidden;
        }

        .filter-badge::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: currentColor;
            opacity: 0.08;
            transition: opacity 0.25s ease;
        }

        .filter-badge:hover::before {
            opacity: 0.15;
        }

        .filter-badge-icon {
            font-size: 18px;
            transition: transform 0.25s ease;
        }

        .filter-badge-label:hover .filter-badge-icon {
            transform: scale(1.1);
        }

        .filter-badge-text {
            position: relative;
            z-index: 1;
        }

        /* En stock - Green */
        .filter-badge.instock {
            color: #059669;
            background: #d1fae5;
        }

        .filter-badge-label input[type="checkbox"]:checked ~ .filter-badge.instock {
            background: #059669;
            color: white;
            border-color: #047857;
            box-shadow: 0 4px 12px rgba(5, 150, 105, 0.3);
        }

        /* Stock faible - Orange */
        .filter-badge.low {
            color: #d97706;
            background: #fef3c7;
        }

        .filter-badge-label input[type="checkbox"]:checked ~ .filter-badge.low {
            background: #f59e0b;
            color: white;
            border-color: #d97706;
            box-shadow: 0 4px 12px rgba(245, 158, 11, 0.3);
        }

        /* Rupture - Red */
        .filter-badge.outofstock {
            color: #dc2626;
            background: #fee2e2;
        }

        .filter-badge-label input[type="checkbox"]:checked ~ .filter-badge.outofstock {
            background: #dc2626;
            color: white;
            border-color: #b91c1c;
            box-shadow: 0 4px 12px rgba(220, 38, 38, 0.3);
        }

        .filter-badge-label input[type="checkbox"]:checked ~ .filter-badge::before {
            opacity: 0;
        }
    </style>
{% endblock %}

{% block sidebar %}
    {% include '_sidebar.html.twig' with {'boutique': boutique, 'activeRoute': 'app_boutique_stocks'} %}
{% endblock %}

{% block body %}

<div class="dashboard-header">
    <div class="dashboard-header-left">
        {% if boutique.logoUrl %}
            <img src="{{ boutique.logoUrl }}" alt="{{ boutique.name }}">
        {% endif %}
        <div>
            <h1>Stocks</h1>
            <p>{{ boutique.name }}</p>
        </div>
    </div>
    <div class="dashboard-header-stats">
        <div class="dashboard-stat">
            <div class="dashboard-stat-value primary">{{ stats.total }}</div>
            <div class="dashboard-stat-label">Produits</div>
        </div>
        <div class="dashboard-stat">
            <div class="dashboard-stat-value" style="color: #f59e0b;">{{ stats.lowStock }}</div>
            <div class="dashboard-stat-label">Stock Faible</div>
        </div>
        <div class="dashboard-stat">
            <div class="dashboard-stat-value" style="color: #dc3545;">{{ stats.outOfStock }}</div>
            <div class="dashboard-stat-label">Rupture</div>
        </div>
    </div>
</div>

<div class="filters-card">
    <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 0;">
        <h3 style="font-size: 16px; font-weight: 700; margin: 0;">Filtres</h3>
        {% if search or category or filters|length > 0 %}
        <span style="font-size: 12px; color: var(--primary); font-weight: 600; background: rgba(16, 185, 129, 0.1); padding: 4px 12px; border-radius: 8px;">
            ‚úì Filtres actifs
        </span>
        {% endif %}
