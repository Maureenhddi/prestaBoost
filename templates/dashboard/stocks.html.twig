    // Cookie helper functions
    function setCookie(name, value, days = 365) {
        const date = new Date();
        date.setTime(date.getTime() + (days * 24 * 60 * 60 * 1000));
        const expires = "expires=" + date.toUTCString();
        document.cookie = name + "=" + value + ";" + expires + ";path=/;SameSite=Lax";
    }

    function getCookie(name) {
        const nameEQ = name + "=";
        const ca = document.cookie.split(';');
        for (let i = 0; i < ca.length; i++) {
            let c = ca[i];
            while (c.charAt(0) == ' ') c = c.substring(1, c.length);
            if (c.indexOf(nameEQ) == 0) return c.substring(nameEQ.length, c.length);
        }
        return null;
    }

    // Checkboxes are already handled by the server via query parameters
    // No need for cookie management as showSales and showRevenue are in the URL

    // Handle days input validation
    if (daysInput) {
        daysInput.addEventListener('input', function() {
            // Validate and clamp value
            let value = parseInt(this.value);
            if (value < 1) value = 1;
            if (value > 90) value = 90;
            this.value = value;
        });
    }

    // Handle table scroll indicators
    const tableScrollWrapper = document.querySelector('.table-scroll-wrapper');
    if (tableScrollWrapper) {
        function updateScrollIndicators() {
            const scrollLeft = tableScrollWrapper.scrollLeft;
            const scrollWidth = tableScrollWrapper.scrollWidth;
            const clientWidth = tableScrollWrapper.clientWidth;
            const maxScroll = scrollWidth - clientWidth;

            // Add/remove classes based on scroll position
            if (scrollLeft > 10) {
                tableScrollWrapper.classList.add('scrolled-left');
            } else {
                tableScrollWrapper.classList.remove('scrolled-left');
            }

            if (scrollLeft < maxScroll - 10) {
                tableScrollWrapper.classList.add('scrolled-right');
            } else {
                tableScrollWrapper.classList.remove('scrolled-right');
            }
        }

        // Update on scroll
        tableScrollWrapper.addEventListener('scroll', updateScrollIndicators);

        // Update on load and resize
        updateScrollIndicators();
        window.addEventListener('resize', updateScrollIndicators);
    }
});
</script>
