{% block body %}

<div class="dashboard-header" style="background: rgba(255, 255, 255, 0.95); backdrop-filter: blur(20px); border-radius: 24px; padding: 30px 40px; margin-bottom: 30px; box-shadow: 0 8px 32px rgba(0, 0, 0, 0.12);">
    <div style="display: flex; align-items: center; gap: 20px;">
        {% if boutique.logoUrl %}
            <img src="{{ boutique.logoUrl }}" alt="{{ boutique.name }}" style="max-height: 50px;">
        {% endif %}
        <div>
            <h1 style="font-size: 28px; font-weight: 700; margin-bottom: 4px;">Analyses</h1>
            <p style="color: var(--gray-600); margin: 0;">{{ boutique.name }}</p>
        </div>
    </div>
</div>

<form method="get" id="analyticsForm">
    <input type="hidden" id="periodHiddenInput" name="period" value="{{ period }}">

    {% include '_filters_period.html.twig' with {
        'activePeriod': period,
        'showAllButton': false,
        'showDateInputs': true,
        'startDate': startDateStr,
        'endDate': endDateStr,
        'dateStartName': 'startDate',
        'dateEndName': 'endDate',
        'formId': 'analyticsForm',
        'cookieName': 'analytics_period',
        'inlineStyle': false
    } %}
</form>

<div class="products-table-card">
    <div style="padding: 24px 30px; border-bottom: 1px solid var(--gray-200);">
        <h2 style="font-size: 20px; font-weight: 700; color: var(--gray-900); margin: 0;">Produits les plus commandés</h2>
        <p style="font-size: 14px; color: var(--gray-600); margin: 8px 0 0 0;">
            Du {{ startDate|date('d/m/Y') }} au {{ endDate|date('d/m/Y') }}
        </p>
    </div>

    {% if topProducts is empty %}
        <div class="empty-state">
            <svg width="80" height="80" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
            </svg>
            <h3>Aucune donnée</h3>
            <p>Aucune commande trouvée pour cette période</p>
        </div>
    {% else %}
        <div class="table-scroll-wrapper">
        <table class="products-table">
            <thead>
                <tr>
                    <th style="width: 60px;" title="Classement du produit par popularité sur la période sélectionnée">Rang</th>
                    <th title="Nom et référence du produit">Produit</th>
                    <th style="text-align: right;">
                        <a href="{{ path('app_boutique_analytics', {id: boutique.id, period: period, startDate: startDateStr, endDate: endDateStr, sort: 'quantity', order: (sort == 'quantity' and order == 'asc') ? 'desc' : 'asc'}) }}" class="sortable-header" title="Nombre total d'unités vendues sur la période">
                            Quantité vendue
                            <span class="sort-icon {{ sort == 'quantity' ? 'active' : '' }}">
                                <span class="sort-up">{{ (sort == 'quantity' and order == 'asc') ? '▲' : '△' }}</span>
                                <span class="sort-down">{{ (sort == 'quantity' and order == 'desc') ? '▼' : '▽' }}</span>
                            </span>
                        </a>
                    </th>
                    <th style="text-align: right;">
                        <a href="{{ path('app_boutique_analytics', {id: boutique.id, period: period, startDate: startDateStr, endDate: endDateStr, sort: 'orderCount', order: (sort == 'orderCount' and order == 'asc') ? 'desc' : 'asc'}) }}" class="sortable-header" title="Nombre de commandes contenant ce produit">
                            Nb commandes
                            <span class="sort-icon {{ sort == 'orderCount' ? 'active' : '' }}">
                                <span class="sort-up">{{ (sort == 'orderCount' and order == 'asc') ? '▲' : '△' }}</span>
                                <span class="sort-down">{{ (sort == 'orderCount' and order == 'desc') ? '▼' : '▽' }}</span>
                            </span>
                        </a>
                    </th>
                    <th style="text-align: right;">
                        <a href="{{ path('app_boutique_analytics', {id: boutique.id, period: period, startDate: startDateStr, endDate: endDateStr, sort: 'revenue', order: (sort == 'revenue' and order == 'asc') ? 'desc' : 'asc'}) }}" class="sortable-header" title="Chiffre d'affaires total TTC généré par ce produit sur la période">
                            CA TTC généré
                            <span class="sort-icon {{ sort == 'revenue' ? 'active' : '' }}">
                                <span class="sort-up">{{ (sort == 'revenue' and order == 'asc') ? '▲' : '△' }}</span>
                                <span class="sort-down">{{ (sort == 'revenue' and order == 'desc') ? '▼' : '▽' }}</span>
                            </span>
                        </a>
                    </th>
                    <th style="text-align: right;">
                        <a href="{{ path('app_boutique_analytics', {id: boutique.id, period: period, startDate: startDateStr, endDate: endDateStr, sort: 'avgPrice', order: (sort == 'avgPrice' and order == 'asc') ? 'desc' : 'asc'}) }}" class="sortable-header" title="Prix de vente TTC moyen du produit (CA TTC / quantité)">
                            Prix moyen TTC
                            <span class="sort-icon {{ sort == 'avgPrice' ? 'active' : '' }}">
                                <span class="sort-up">{{ (sort == 'avgPrice' and order == 'asc') ? '▲' : '△' }}</span>
                                <span class="sort-down">{{ (sort == 'avgPrice' and order == 'desc') ? '▼' : '▽' }}</span>
                            </span>
                        </a>
                    </th>
                </tr>
            </thead>
            <tbody>
                {% for index, product in topProducts %}
                    {% set rank = index + 1 %}
                    {% set rankClass = 'other' %}
                    {% if rank == 1 %}
                        {% set rankClass = 'top-1' %}
                    {% elseif rank == 2 %}
                        {% set rankClass = 'top-2' %}
                    {% elseif rank == 3 %}
                        {% set rankClass = 'top-3' %}
                    {% endif %}
                    <tr>
                        <td>
                            <span class="rank-badge {{ rankClass }}">{{ rank }}</span>
                        </td>
                        <td>
                            <div class="product-name">{{ product.productName }}</div>
                            <div class="product-reference">Réf: {{ product.productReference }}</div>
                        </td>
                        <td style="text-align: right; font-weight: 700; font-size: 16px;">
                            {{ product.totalQuantity }}
                        </td>
                        <td style="text-align: right; color: var(--gray-600);">
                            {{ product.orderCount }}
                        </td>
                        <td style="text-align: right; font-weight: 700; color: #10b981;">
                            {{ product.totalRevenue|number_format(2, ',', ' ') }} €
                        </td>
                        <td style="text-align: right; color: var(--gray-600);">
                            {{ product.avgPrice|number_format(2, ',', ' ') }} €
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
        </div>
    {% endif %}
</div>

{% endblock %}

{% block javascripts %}
<script>
document.addEventListener('DOMContentLoaded', function() {
    const tableScrollWrapper = document.querySelector('.table-scroll-wrapper');
    if (tableScrollWrapper) {
        function updateScrollIndicators() {
            const scrollLeft = tableScrollWrapper.scrollLeft;
            const scrollWidth = tableScrollWrapper.scrollWidth;
            const clientWidth = tableScrollWrapper.clientWidth;
            const maxScroll = scrollWidth - clientWidth;

            if (scrollLeft > 10) {
                tableScrollWrapper.classList.add('scrolled-left');
            } else {
                tableScrollWrapper.classList.remove('scrolled-left');
            }

            if (scrollLeft < maxScroll - 10) {
                tableScrollWrapper.classList.add('scrolled-right');
            } else {
                tableScrollWrapper.classList.remove('scrolled-right');
            }
        }

        tableScrollWrapper.addEventListener('scroll', updateScrollIndicators);
        updateScrollIndicators();
        window.addEventListener('resize', updateScrollIndicators);
    }

    // Period filter logic is now in _filters_period.html.twig component
});
</script>
{% endblock %}
