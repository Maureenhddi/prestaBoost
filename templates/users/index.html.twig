{% extends 'base.html.twig' %}

{% block title %}Gestion des Utilisateurs - PrestaBoost{% endblock %}

{% block navbar %}
<div class="container">
    <nav class="navbar">
        <div class="navbar-brand">PrestaBoost</div>
        <ul class="navbar-menu">
            <li><a href="{{ path('app_dashboard') }}">Dashboard</a></li>
            <li><a href="{{ path('app_boutiques') }}">Mes Boutiques</a></li>
            <li><a href="{{ path('app_users') }}" class="active">Utilisateurs</a></li>
            <li><a href="{{ path('app_logout') }}">Déconnexion</a></li>
        </ul>
    </nav>
</div>
{% endblock %}

{% block body %}
<div class="page-header" style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 30px;">
    <h1 style="font-size: 32px; color: var(--dark-text);">Gestion des Utilisateurs</h1>
    <a href="{{ path('app_user_new') }}" class="btn btn-primary">Créer un utilisateur</a>
</div>

<div class="card" style="padding: 0; overflow: hidden;">
    <table style="width: 100%; border-collapse: collapse;">
        <thead>
            <tr style="background-color: var(--surface-light); border-bottom: 2px solid var(--surface-dark);">
                <th style="padding: 20px; text-align: left; font-weight: 600; color: var(--dark-text);">Nom</th>
                <th style="padding: 20px; text-align: left; font-weight: 600; color: var(--dark-text);">Email</th>
                <th style="padding: 20px; text-align: left; font-weight: 600; color: var(--dark-text);">Rôle</th>
                <th style="padding: 20px; text-align: left; font-weight: 600; color: var(--dark-text);">Boutiques</th>
                <th style="padding: 20px; text-align: right; font-weight: 600; color: var(--dark-text);">Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for user in users %}
                <tr style="border-bottom: 1px solid var(--surface-light);">
                    <td style="padding: 20px;">
                        <div style="font-weight: 500; color: var(--dark-text);">{{ user.firstName }} {{ user.lastName }}</div>
                    </td>
                    <td style="padding: 20px;">
                        <div style="color: var(--dark-text); opacity: 0.8;">{{ user.email }}</div>
                    </td>
                    <td style="padding: 20px;">
                        {% if user.isSuperAdmin() %}
                            <span class="badge" style="background-color: var(--primary); color: white; padding: 6px 12px; border-radius: 20px; font-size: 12px; font-weight: 500;">Super Admin</span>
                        {% else %}
                            <span class="badge" style="background-color: var(--surface-light); color: var(--dark-text); padding: 6px 12px; border-radius: 20px; font-size: 12px; font-weight: 500;">Utilisateur</span>
                        {% endif %}
                    </td>
                    <td style="padding: 20px;">
                        <div style="color: var(--dark-text); opacity: 0.8;">
                            {% if user.isSuperAdmin() %}
                                Toutes
                            {% else %}
                                {{ user.boutiqueUsers|length }} boutique(s)
                            {% endif %}
                        </div>
                    </td>
                    <td style="padding: 20px; text-align: right;">
                        <div style="display: flex; gap: 10px; justify-content: flex-end;">
                            <a href="{{ path('app_user_edit', {id: user.id}) }}" class="btn btn-secondary" style="padding: 8px 16px; font-size: 14px;">Modifier</a>
                            {% if user.id != app.user.id %}
                                <form method="post" action="{{ path('app_user_delete', {id: user.id}) }}" style="display: inline;" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cet utilisateur ?');">
                                    <button type="submit" class="btn btn-danger" style="padding: 8px 16px; font-size: 14px; background-color: #ef4444; border-color: #ef4444;">Supprimer</button>
                                </form>
                            {% endif %}
                        </div>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5" style="padding: 60px; text-align: center;">
                        <p style="color: var(--dark-text); opacity: 0.6; margin: 0;">Aucun utilisateur trouvé</p>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
