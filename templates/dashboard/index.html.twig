{% extends 'base.html.twig' %}

{% block title %}Mes Boutiques - PrestaBoost{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="/css/dashboard.css?v={{ 'now'|date('YmdHis') }}">
{% endblock %}

{% block sidebar %}
    {% include '_sidebar_global.html.twig' with {'activeRoute': 'app_dashboard'} %}
{% endblock %}

{% block body %}

<div class="dashboard-header">
    <div class="header-content">
        <div class="header-text">
            <h1>{{ app.user.firstName }}</h1>
            <p>{{ boutiques|length }} boutique{{ boutiques|length > 1 ? 's' : '' }} connectée{{ boutiques|length > 1 ? 's' : '' }}</p>
        </div>
        {% if app.user.isSuperAdmin() %}
            <a href="{{ path('app_boutique_new') }}" class="btn-add-shop">
                <svg width="20" height="20" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M12 4v16m8-8H4"/>
                </svg>
                Nouvelle boutique
            </a>
        {% endif %}
    </div>
</div>

<div class="boutiques-grid">
    {% for boutique in boutiques %}
        {% set boutiqueColor = boutique.primaryColor ?? '#10b981' %}
        <div class="boutique-card-enhanced">
            <div class="boutique-header" style="background: linear-gradient(135deg, {{ boutiqueColor }} 0%, {{ boutiqueColor }}dd 100%);">
                {% if boutique.logoUrl %}
                    <img src="{{ boutique.logoUrl }}" alt="{{ boutique.name }}" class="boutique-logo">
                {% else %}
                    <div class="boutique-logo-placeholder">{{ boutique.name|slice(0, 2)|upper }}</div>
                {% endif %}
            </div>
            <div class="boutique-body">
                <h3>{{ boutique.name }}</h3>
                <p class="boutique-domain">{{ boutique.domain }}</p>
            </div>
            <div class="boutique-actions">
                <a href="{{ path('app_boutique_dashboard', {id: boutique.id}) }}" class="btn-action btn-action-primary" style="--action-color: {{ boutiqueColor }};">
                    <svg width="18" height="18" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
                    </svg>
                    Dashboard
                </a>
                <a href="{{ path('app_boutique_stocks', {id: boutique.id}) }}" class="btn-action">
                    <svg width="18" height="18" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"/>
                    </svg>
                    Stocks
                </a>
                <a href="{{ path('app_boutique_settings', {id: boutique.id}) }}" class="btn-action">
                    <svg width="18" height="18" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"/>
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                    </svg>
                    Paramètres
                </a>
            </div>
        </div>
    {% else %}
        <div class="empty-state">
            <svg width="120" height="120" fill="none" stroke="currentColor" viewBox="0 0 24 24" style="opacity: 0.2; margin: 0 auto 20px;">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
            </svg>
            <h3>Aucune boutique</h3>
            <p>Vous n'avez pas encore de boutique connectée</p>
            {% if app.user.isSuperAdmin() %}
                <a href="{{ path('app_boutique_new') }}" class="btn btn-primary">Créer ma première boutique</a>
            {% endif %}
        </div>
    {% endfor %}
</div>

<style>
.dashboard-header {
    background: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(20px);
    border-radius: 24px;
    padding: 40px 50px;
    margin-bottom: 40px;
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.12);
    border: 1px solid rgba(255, 255, 255, 0.5);
}

.header-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 30px;
}

.header-text h1 {
    font-size: 36px;
    font-weight: 700;
    color: var(--gray-900);
    margin-bottom: 8px;
    background: linear-gradient(135deg, var(--primary), var(--secondary));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
}

.header-text p {
    font-size: 16px;
    color: var(--gray-600);
    margin: 0;
    font-weight: 500;
}

.btn-add-shop {
    display: inline-flex;
    align-items: center;
    gap: 10px;
    padding: 14px 28px;
    background: linear-gradient(135deg, var(--primary), var(--primary-light));
    color: white;
    text-decoration: none;
    border-radius: 16px;
    font-weight: 600;
    font-size: 15px;
    transition: all 0.3s ease;
    box-shadow: 0 4px 16px rgba(16, 185, 129, 0.3);
    border: none;
}

.btn-add-shop:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 24px rgba(16, 185, 129, 0.4);
}

.btn-add-shop svg {
    flex-shrink: 0;
}

@media (max-width: 1024px) {
    .dashboard-header {
        padding: 32px 35px;
        margin-bottom: 32px;
    }

    .header-text h1 {
        font-size: 32px;
    }

    .boutiques-grid {
        grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
        gap: 24px;
    }
}

@media (max-width: 768px) {
    .dashboard-header {
        padding: 24px 20px;
        margin-bottom: 24px;
        border-radius: 16px;
    }

    .header-content {
        flex-direction: column;
        align-items: flex-start;
        gap: 20px;
    }

    .header-text h1 {
        font-size: 24px;
    }

    .header-text p {
        font-size: 14px;
    }

    .btn-add-shop {
        width: 100%;
        justify-content: center;
        padding: 12px 24px;
        font-size: 14px;
    }

    .boutiques-grid {
        grid-template-columns: 1fr;
        gap: 20px;
        margin-top: 24px;
    }

    .boutique-card-enhanced {
        border-radius: 16px;
    }

    .boutique-header {
        padding: 32px 24px;
        min-height: 120px;
    }

    .boutique-logo {
        max-width: 100px;
        max-height: 60px;
    }

    .boutique-logo-placeholder {
        width: 60px;
        height: 60px;
        font-size: 24px;
    }

    .boutique-body {
        padding: 24px 20px;
    }

    .boutique-body h3 {
        font-size: 20px;
    }

    .boutique-domain {
        font-size: 13px;
    }

    .boutique-actions {
        padding: 16px;
        gap: 12px;
    }

    .btn-action {
        padding: 12px 14px;
        font-size: 13px;
        flex-direction: column;
        gap: 6px;
        text-align: center;
    }

    .btn-action svg {
        width: 20px;
        height: 20px;
    }
}

@media (max-width: 480px) {
    .dashboard-header {
        padding: 20px 16px;
        border-radius: 12px;
        margin-left: -0.75rem;
        margin-right: -0.75rem;
    }

    .header-text h1 {
        font-size: 22px;
    }

    .header-text p {
        font-size: 13px;
    }

    .btn-add-shop {
        padding: 12px 20px;
        font-size: 13px;
        gap: 8px;
    }

    .btn-add-shop svg {
        width: 18px;
        height: 18px;
    }

    .boutiques-grid {
        gap: 16px;
        margin-top: 20px;
    }

    .boutique-card-enhanced {
        border-radius: 12px;
    }

    .boutique-header {
        padding: 24px 20px;
        min-height: 100px;
    }

    .boutique-logo {
        max-width: 80px;
        max-height: 50px;
    }

    .boutique-logo-placeholder {
        width: 50px;
        height: 50px;
        font-size: 20px;
        border-width: 2px;
    }

    .boutique-body {
        padding: 20px 16px;
    }

    .boutique-body h3 {
        font-size: 18px;
        margin-bottom: 6px;
    }

    .boutique-domain {
        font-size: 12px;
        word-break: break-all;
    }

    .boutique-actions {
        padding: 12px;
        flex-direction: column;
        gap: 10px;
    }

    .btn-action {
        width: 100%;
        padding: 12px 16px;
        flex-direction: row;
        justify-content: center;
        font-size: 14px;
    }

    .btn-action svg {
        width: 18px;
        height: 18px;
    }

    .empty-state {
        padding: 60px 20px;
    }

    .empty-state h3 {
        font-size: 22px;
    }

    .empty-state p {
        font-size: 14px;
        margin-bottom: 24px;
    }
}

.boutiques-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
    gap: 32px;
    margin-top: 40px;
}

.boutique-card-enhanced {
    background: white;
    border-radius: 24px;
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.06);
    overflow: hidden;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    display: flex;
    flex-direction: column;
    border: 1px solid rgba(0, 0, 0, 0.04);
}

.boutique-card-enhanced:hover {
    transform: translateY(-12px) scale(1.02);
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.12);
    border-color: rgba(0, 0, 0, 0.08);
}

.boutique-header {
    padding: 48px 36px;
    display: flex;
    justify-content: center;
    align-items: center;
    min-height: 180px;
    position: relative;
    overflow: hidden;
}

.boutique-header::before {
    content: '';
    position: absolute;
    top: -50%;
    right: -50%;
    width: 200%;
    height: 200%;
    background: radial-gradient(circle at center, rgba(255,255,255,0.15) 0%, transparent 60%);
    animation: pulse 3s ease-in-out infinite;
}

@keyframes pulse {
    0%, 100% { opacity: 0.5; }
    50% { opacity: 1; }
}

.boutique-logo {
    max-width: 140px;
    max-height: 90px;
    object-fit: contain;
    filter: brightness(0) invert(1) drop-shadow(0 4px 12px rgba(0,0,0,0.15));
    position: relative;
    z-index: 1;
    transition: transform 0.3s ease;
}

.boutique-card-enhanced:hover .boutique-logo {
    transform: scale(1.1);
}

.boutique-logo-placeholder {
    width: 90px;
    height: 90px;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.25);
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 36px;
    font-weight: 700;
    color: white;
    border: 3px solid rgba(255, 255, 255, 0.4);
    position: relative;
    z-index: 1;
    backdrop-filter: blur(10px);
    transition: transform 0.3s ease;
}

.boutique-card-enhanced:hover .boutique-logo-placeholder {
    transform: scale(1.1);
}

.boutique-body {
    padding: 32px 28px;
    flex: 1;
    background: linear-gradient(to bottom, rgba(249, 250, 251, 0.3), white);
}

.boutique-body h3 {
    font-size: 22px;
    font-weight: 700;
    color: var(--gray-900);
    margin-bottom: 10px;
    line-height: 1.3;
    letter-spacing: -0.02em;
}

.boutique-domain {
    font-size: 14px;
    color: var(--gray-500);
    margin: 0;
    font-weight: 500;
}

.boutique-actions {
    padding: 24px;
    display: flex;
    gap: 12px;
    background: linear-gradient(to bottom, var(--gray-50), rgba(249, 250, 251, 0.5));
    border-top: 1px solid rgba(0, 0, 0, 0.06);
}

.btn-action {
    flex: 1;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 8px;
    padding: 14px 18px;
    border-radius: 14px;
    font-size: 14px;
    font-weight: 600;
    text-decoration: none;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    background: white;
    color: var(--gray-700);
    border: 1.5px solid var(--gray-200);
    position: relative;
    overflow: hidden;
}

.btn-action::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, transparent, rgba(0,0,0,0.02));
    opacity: 0;
    transition: opacity 0.3s ease;
}

.btn-action:hover::before {
    opacity: 1;
}

.btn-action:hover {
    transform: translateY(-3px);
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
    color: var(--gray-900);
    border-color: var(--gray-400);
}

.btn-action svg {
    transition: transform 0.3s ease;
}

.btn-action:hover svg {
    transform: scale(1.1);
}

.btn-action-primary {
    background: linear-gradient(135deg, var(--action-color, var(--primary)), var(--action-color, var(--primary)));
    color: white;
    border-color: transparent;
    box-shadow: 0 4px 12px rgba(16, 185, 129, 0.25);
}

.btn-action-primary::before {
    background: linear-gradient(135deg, rgba(255,255,255,0.1), rgba(255,255,255,0.2));
}

.btn-action-primary:hover {
    transform: translateY(-3px);
    box-shadow: 0 8px 24px rgba(16, 185, 129, 0.4);
    color: white;
}

.empty-state {
    grid-column: 1 / -1;
    text-align: center;
    padding: 100px 20px;
    background: rgba(255, 255, 255, 0.9);
    backdrop-filter: blur(20px);
    border-radius: 20px;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
}

.empty-state h3 {
    font-size: 28px;
    color: var(--gray-900);
    margin-bottom: 15px;
    font-weight: 600;
}

.empty-state p {
    font-size: 16px;
    color: var(--gray-600);
    margin-bottom: 30px;
}

</style>

{% endblock %}
