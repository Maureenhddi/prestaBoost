{% extends 'base.html.twig' %}

{% block title %}Dashboard - PrestaBoost{% endblock %}

{% block navbar %}
<div class="container">
    <nav class="navbar">
        <div class="navbar-brand">PrestaBoost</div>
        <ul class="navbar-menu">
            <li><a href="{{ path('app_dashboard') }}">Dashboard</a></li>
            <li><a href="{{ path('app_boutiques') }}">Mes Boutiques</a></li>
            <li><a href="{{ path('app_logout') }}">D√©connexion</a></li>
        </ul>
    </nav>
</div>
{% endblock %}

{% block body %}
<style>
    .welcome-section {
        margin-bottom: 40px;
    }

    .welcome-section h1 {
        font-size: 36px;
        margin-bottom: 10px;
        color: var(--dark-text);
    }

    .welcome-section p {
        color: var(--dark-text);
        opacity: 0.8;
    }

    .stats-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 20px;
        margin-bottom: 40px;
    }

    .stat-card {
        background: var(--white);
        padding: 30px;
        border-radius: 20px;
        box-shadow: 0 5px 20px var(--shadow);
        text-align: center;
        transition: all 0.3s ease;
    }

    .stat-card:hover {
        transform: translateY(-5px);
    }

    .stat-card.pink {
        background: linear-gradient(135deg, var(--pastel-pink), var(--pastel-peach));
    }

    .stat-card.blue {
        background: linear-gradient(135deg, var(--pastel-blue), var(--pastel-purple));
    }

    .stat-card.green {
        background: linear-gradient(135deg, var(--pastel-green), var(--pastel-yellow));
    }

    .stat-number {
        font-size: 48px;
        font-weight: 700;
        color: var(--dark-text);
        margin-bottom: 10px;
    }

    .stat-label {
        font-size: 16px;
        color: var(--dark-text);
        font-weight: 600;
    }

    .boutique-card {
        background: var(--white);
        padding: 25px;
        border-radius: 20px;
        box-shadow: 0 5px 15px var(--shadow);
        margin-bottom: 20px;
        transition: all 0.3s ease;
    }

    .boutique-card:hover {
        transform: translateY(-3px);
        box-shadow: 0 10px 25px var(--shadow);
    }

    .boutique-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 15px;
    }

    .boutique-name {
        font-size: 24px;
        font-weight: 700;
        color: var(--dark-text);
    }

    .boutique-domain {
        color: var(--dark-text);
        opacity: 0.7;
        margin-bottom: 15px;
    }

    .boutique-actions {
        display: flex;
        gap: 10px;
    }
</style>

<div class="welcome-section">
    <h1>Bienvenue, {{ app.user.firstName }} !</h1>
    <p>Voici un aper√ßu de vos boutiques PrestaShop</p>
</div>

<div class="stats-grid">
    <div class="stat-card pink">
        <div class="stat-number">{{ totalBoutiques }}</div>
        <div class="stat-label">Boutiques</div>
    </div>

    <div class="stat-card blue">
        <div class="stat-number">{{ totalProducts }}</div>
        <div class="stat-label">Produits suivis</div>
    </div>

    <div class="stat-card" style="background: linear-gradient(135deg, var(--pastel-yellow), var(--pastel-peach));">
        <div class="stat-number">{{ lowStock }}</div>
        <div class="stat-label">Stock faible</div>
    </div>

    <div class="stat-card" style="background: linear-gradient(135deg, #FFB3B3, #FF9999);">
        <div class="stat-number">{{ outOfStock }}</div>
        <div class="stat-label">En rupture</div>
    </div>
</div>

{% if lowStockProducts is not empty %}
<div class="card" style="margin-bottom: 30px; border-left: 5px solid var(--pastel-peach);">
    <h2 style="color: #ff6b6b; margin-bottom: 20px;">‚ö†Ô∏è Alertes Stock Faible</h2>
    <p style="margin-bottom: 20px; color: var(--dark-text); opacity: 0.8;">
        Produits n√©cessitant un r√©approvisionnement urgent
    </p>

    <div style="overflow-x: auto;">
        <table style="width: 100%; border-collapse: separate; border-spacing: 0 10px;">
            <thead>
                <tr style="background: var(--pastel-peach);">
                    <th style="padding: 15px; text-align: left; font-weight: 600; border-radius: 15px 0 0 15px;">Boutique</th>
                    <th style="padding: 15px; text-align: left; font-weight: 600;">Produit</th>
                    <th style="padding: 15px; text-align: left; font-weight: 600;">R√©f√©rence</th>
                    <th style="padding: 15px; text-align: left; font-weight: 600;">Quantit√©</th>
                    <th style="padding: 15px; text-align: left; font-weight: 600; border-radius: 0 15px 15px 0;">Action</th>
                </tr>
            </thead>
            <tbody>
                {% for item in lowStockProducts %}
                <tr style="background: var(--white); transition: all 0.3s ease;">
                    <td style="padding: 15px; border-radius: 15px 0 0 15px;">{{ item.boutique.name }}</td>
                    <td style="padding: 15px;">{{ item.stock.name }}</td>
                    <td style="padding: 15px;">{{ item.stock.reference ?? '-' }}</td>
                    <td style="padding: 15px;">
                        <span style="padding: 5px 15px; border-radius: 20px; font-weight: 600; {% if item.stock.quantity == 0 %}background: #FFB3B3;{% else %}background: var(--pastel-yellow);{% endif %}">
                            {{ item.stock.quantity }}
                        </span>
                    </td>
                    <td style="padding: 15px; border-radius: 0 15px 15px 0;">
                        <a href="{{ path('app_boutique_stocks', {id: item.boutique.id, filter: 'low'}) }}" class="btn btn-primary" style="padding: 8px 15px; font-size: 14px;">
                            Voir d√©tails
                        </a>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endif %}

{% if topSellingProducts is not empty %}
<div class="card" style="margin-bottom: 30px; border-left: 5px solid var(--pastel-green);">
    <h2 style="color: #28a745; margin-bottom: 20px;">üî• Top Produits Vendus</h2>
    <p style="margin-bottom: 20px; color: var(--dark-text); opacity: 0.8;">
        Produits les plus vendus sur les 7 derniers jours
    </p>

    <div style="overflow-x: auto;">
        <table style="width: 100%; border-collapse: separate; border-spacing: 0 10px;">
            <thead>
                <tr style="background: var(--pastel-green);">
                    <th style="padding: 15px; text-align: left; font-weight: 600; border-radius: 15px 0 0 15px;">Boutique</th>
                    <th style="padding: 15px; text-align: left; font-weight: 600;">Produit</th>
                    <th style="padding: 15px; text-align: left; font-weight: 600;">R√©f√©rence</th>
                    <th style="padding: 15px; text-align: left; font-weight: 600;">Vendus</th>
                    <th style="padding: 15px; text-align: left; font-weight: 600;">Stock actuel</th>
                    <th style="padding: 15px; text-align: left; font-weight: 600; border-radius: 0 15px 15px 0;">Action</th>
                </tr>
            </thead>
            <tbody>
                {% for item in topSellingProducts %}
                <tr style="background: var(--white); transition: all 0.3s ease;">
                    <td style="padding: 15px; border-radius: 15px 0 0 15px;">{{ item.boutique.name }}</td>
                    <td style="padding: 15px;">{{ item.stock.name }}</td>
                    <td style="padding: 15px;">{{ item.stock.reference ?? '-' }}</td>
                    <td style="padding: 15px;">
                        <span style="padding: 5px 15px; border-radius: 20px; font-weight: 600; background: var(--pastel-green); color: var(--dark-text);">
                            -{{ item.sold }}
                        </span>
                    </td>
                    <td style="padding: 15px;">{{ item.stock.quantity }}</td>
                    <td style="padding: 15px; border-radius: 0 15px 15px 0;">
                        <a href="{{ path('app_boutique_stocks', {id: item.boutique.id}) }}" class="btn btn-primary" style="padding: 8px 15px; font-size: 14px;">
                            Voir d√©tails
                        </a>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endif %}

<div class="card">
    <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 30px;">
        <h2>Mes Boutiques</h2>
        <a href="{{ path('app_boutique_new') }}" class="btn btn-primary">Ajouter une boutique</a>
    </div>

    {% if boutiques is empty %}
        <div style="text-align: center; padding: 40px;">
            <p style="font-size: 18px; color: var(--dark-text); opacity: 0.6; margin-bottom: 20px;">
                Vous n'avez pas encore de boutique
            </p>
            <a href="{{ path('app_boutique_new') }}" class="btn btn-primary">Cr√©er ma premi√®re boutique</a>
        </div>
    {% else %}
        {% for boutique in boutiques %}
            <div class="boutique-card">
                <div class="boutique-header">
                    <div class="boutique-name">{{ boutique.name }}</div>
                </div>
                <div class="boutique-domain">{{ boutique.domain }}</div>
                <div class="boutique-actions">
                    <a href="{{ path('app_boutique_stocks', {id: boutique.id}) }}" class="btn btn-primary">
                        Voir les stocks
                    </a>
                    <a href="#" class="btn btn-secondary">Param√®tres</a>
                </div>
            </div>
        {% endfor %}
    {% endif %}
</div>
{% endblock %}
