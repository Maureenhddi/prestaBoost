@media (max-width: 768px) {
    .dashboard-header {
        flex-direction: column;
        align-items: flex-start;
    }

    .header-actions {
        width: 100%;
        flex-direction: column;
    }

    .btn-header {
        width: 100%;
        justify-content: center;
    }

    .action-banner {
        flex-direction: column;
        text-align: center;
    }

    .banner-btn {
        width: 100%;
    }
}

